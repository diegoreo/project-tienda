            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
          </svg>
          Turnos
        <% end %>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <%= link_to "Sesi√≥n ##{@register_session.id}", register_session_path(@register_session), class: "ml-1 text-gray-700 hover:text-blue-600 md:ml-2" %>
        </div>
      </li>
      <li aria-current="page">
        <div class="flex items-center">
          <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="ml-1 text-gray-500 md:ml-2">Reporte de Cierre</span>
        </div>
      </li>
    </ol>
  </nav>

  <!-- Header con acciones -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">üìä Reporte de Cierre de Caja</h1>
      <p class="text-gray-600 mt-2">Sesi√≥n #<%= @register_session.id %> - <%= @register_session.register.display_name %></p>
    </div>
    
    <div class="flex space-x-3 no-print">
      <button onclick="window.print()" 
              class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg shadow transition flex items-center space-x-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
        </svg>
        <span>Imprimir</span>
      </button>
    
      <%= link_to "Volver", register_session_path(@register_session), 
          class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-2 px-6 rounded-lg transition" %>
    </div>
  </div>

  <!-- Informaci√≥n del Turno -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    
    <!-- Datos de Apertura -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
        <svg class="w-6 h-6 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"/>
        </svg>
        Datos de Apertura
      </h2>
      
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Abierta por:</span>
          <span class="text-sm font-semibold text-gray-900"><%= @report_data[:opened_by].name %></span>
        </div>
        
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Fecha y hora:</span>
          <span class="text-sm font-semibold text-gray-900"><%= @report_data[:opened_at].strftime("%d/%m/%Y %H:%M") %></span>
        </div>
        
        <div class="flex justify-between items-center pt-3 border-t border-gray-200">
          <span class="text-sm text-gray-600">Fondo inicial:</span>
          <span class="text-lg font-bold text-green-600">$<%= number_with_precision(@report_data[:opening_balance], precision: 2) %></span>
        </div>
        
        <% if @register_session.opening_notes.present? %>
          <div class="pt-3 border-t border-gray-200">
            <p class="text-xs text-gray-600 mb-1">Notas de apertura:</p>
            <p class="text-sm text-gray-900"><%= @register_session.opening_notes %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Datos de Cierre -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
        <svg class="w-6 h-6 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
        Datos de Cierre
      </h2>
      
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Cerrada por:</span>
          <span class="text-sm font-semibold text-gray-900"><%= @report_data[:closed_by]&.name || "-" %></span>
        </div>
        
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Fecha y hora:</span>
          <span class="text-sm font-semibold text-gray-900"><%= @report_data[:closed_at]&.strftime("%d/%m/%Y %H:%M") || "-" %></span>
        </div>
        
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Duraci√≥n del turno:</span>
          <span class="text-sm font-semibold text-gray-900"><%= @report_data[:duration] ? "#{@report_data[:duration]} horas" : "-" %></span>
        </div>
        
        <div class="flex justify-between items-center pt-3 border-t border-gray-200">
          <span class="text-sm text-gray-600">Efectivo contado:</span>
          <span class="text-lg font-bold text-blue-600">$<%= number_with_precision(@report_data[:closing_balance], precision: 2) %></span>
        </div>
        
        <% if @register_session.closing_notes.present? %>
          <div class="pt-3 border-t border-gray-200">
            <p class="text-xs text-gray-600 mb-1">Notas de cierre:</p>
            <p class="text-sm text-gray-900"><%= @register_session.closing_notes %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Resumen Financiero -->
  <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-lg shadow-lg p-8 mb-6 border-2 border-blue-200">
    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">üí∞ Resumen Financiero</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
      <div class="bg-white rounded-lg p-6 shadow">
        <p class="text-sm text-gray-600 mb-2">Total Ventas</p>
        <p class="text-3xl font-bold text-green-600">$<%= number_with_precision(@report_data[:total_sales], precision: 2) %></p>
        <p class="text-xs text-gray-500 mt-2"><%= @report_data[:sales_count] %> ventas</p>
      </div>
      
      <div class="bg-white rounded-lg p-6 shadow">
        <p class="text-sm text-gray-600 mb-2">üíµ Efectivo</p>
        <p class="text-3xl font-bold text-green-700">$<%= number_with_precision(@report_data[:total_cash_sales], precision: 2) %></p>
      </div>
      
      <div class="bg-white rounded-lg p-6 shadow">
        <p class="text-sm text-gray-600 mb-2">üí≥ Tarjeta</p>
        <p class="text-3xl font-bold text-blue-600">$<%= number_with_precision(@report_data[:total_card_sales], precision: 2) %></p>
      </div>
      
      <div class="bg-white rounded-lg p-6 shadow">
        <p class="text-sm text-gray-600 mb-2">üïí Cr√©dito</p>
        <p class="text-3xl font-bold text-purple-600">$<%= number_with_precision(@report_data[:total_credit_sales], precision: 2) %></p>
      </div>
    </div>

    <!-- Cuadre de Efectivo -->
    <div class="bg-white rounded-lg p-6 shadow-lg">
      <h3 class="text-lg font-bold text-gray-900 mb-4 text-center">üìä Cuadre de Efectivo</h3>
      
      <div class="space-y-3">
        <div class="flex justify-between items-center text-lg">
          <span class="text-gray-700">Fondo inicial:</span>
          <span class="font-semibold">$<%= number_with_precision(@report_data[:opening_balance], precision: 2) %></span>
        </div>
        
        <div class="flex justify-between items-center text-lg">
          <span class="text-gray-700">+ Ventas en efectivo:</span>
          <span class="font-semibold text-green-600">$<%= number_with_precision(@report_data[:total_cash_sales], precision: 2) %></span>
        </div>
        
        <div class="flex justify-between items-center text-lg pt-3 border-t-2 border-gray-300">
          <span class="text-gray-900 font-bold">= Efectivo esperado:</span>
          <span class="text-2xl font-bold text-blue-600">$<%= number_with_precision(@report_data[:expected_balance], precision: 2) %></span>
        </div>
        
        <div class="flex justify-between items-center text-lg">
          <span class="text-gray-900 font-bold">Efectivo contado:</span>
          <span class="text-2xl font-bold text-green-600">$<%= number_with_precision(@report_data[:closing_balance], precision: 2) %></span>
        </div>
        
        <div class="flex justify-between items-center text-xl pt-3 border-t-2 border-gray-400">
          <span class="text-gray-900 font-bold">Diferencia:</span>
          <% if @report_data[:difference] %>
            <% if @report_data[:difference].zero? %>
              <span class="text-2xl font-black text-green-600">$0.00 ‚úì</span>
            <% elsif @report_data[:difference].positive? %>
              <span class="text-2xl font-black text-blue-600">+$<%= number_with_precision(@report_data[:difference], precision: 2) %></span>
            <% else %>
              <span class="text-2xl font-black text-red-600">-$<%= number_with_precision(@report_data[:difference].abs, precision: 2) %></span>
            <% end %>
          <% end %>
        </div>
        
        <!-- Mensaje seg√∫n diferencia -->
        <% if @report_data[:difference] %>
          <div class="pt-3 mt-3 border-t border-gray-200">
            <% if @report_data[:difference].zero? %>
              <div class="bg-green-100 border-l-4 border-green-500 p-3 rounded">
                <p class="text-sm font-semibold text-green-800">‚úÖ ¬°Perfecto! El efectivo cuadra exactamente.</p>
              </div>
            <% elsif @report_data[:difference].positive? %>
              <div class="bg-blue-100 border-l-4 border-blue-500 p-3 rounded">
                <p class="text-sm font-semibold text-blue-800">‚ÑπÔ∏è Sobrante de $<%= number_with_precision(@report_data[:difference], precision: 2) %></p>
                <p class="text-xs text-blue-700 mt-1">Hay m√°s efectivo del esperado. Verificar origen.</p>
              </div>
            <% else %>
              <div class="bg-red-100 border-l-4 border-red-500 p-3 rounded">
                <p class="text-sm font-semibold text-red-800">‚ö†Ô∏è Faltante de $<%= number_with_precision(@report_data[:difference].abs, precision: 2) %></p>
                <p class="text-xs text-red-700 mt-1">Falta efectivo. Revisar notas de cierre y ventas.</p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Estad√≠sticas -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">üìà Rendimiento</h3>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Ticket promedio:</span>
          <span class="text-lg font-bold text-blue-600">$<%= number_with_precision(@report_data[:average_ticket], precision: 2) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Ventas por hora:</span>
          <span class="text-lg font-bold text-purple-600"><%= @report_data[:sales_per_hour] %></span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">‚ùå Cancelaciones</h3>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Cantidad:</span>
          <span class="text-lg font-bold text-red-600"><%= @report_data[:cancelled_sales_count] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Monto:</span>
          <span class="text-lg font-bold text-red-600">$<%= number_with_precision(@report_data[:cancelled_sales_total], precision: 2) %></span>
        </div>
        <div class="flex justify-between items-center pt-3 border-t border-gray-200">
          <span class="text-sm text-gray-600">Tasa:</span>
          <span class="text-lg font-bold <%= @report_data[:cancellation_rate] > 10 ? 'text-red-600' : 'text-green-600' %>">
            <%= @report_data[:cancellation_rate] %>%
          </span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <h3 class="text-lg font-bold text-gray-900 mb-4">‚è±Ô∏è Tiempo</h3>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Duraci√≥n:</span>
          <span class="text-lg font-bold text-gray-900"><%= @report_data[:duration] %> hrs</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Apertura:</span>
          <span class="text-sm text-gray-900"><%= @report_data[:opened_at].strftime("%H:%M") %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Cierre:</span>
          <span class="text-sm text-gray-900"><%= @report_data[:closed_at].strftime("%H:%M") %></span>
        </div>
      </div>
    </div>
  </div>

  <!-- Detalle de Ventas -->
  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <h2 class="text-xl font-bold text-gray-900 mb-4">üõí Detalle de Ventas</h2>
    
    <% if @sales.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Folio</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Cliente</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">M√©todo</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Total</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Hora</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @sales.each do |sale| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">#<%= sale.id %></td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600"><%= sale.customer&.name || "Sin cliente" %></td>
                <td class="px-4 py-3 whitespace-nowrap text-sm">
                  <% case sale.payment_method %>
                  <% when 'cash' %>
                    <span class="text-green-600">üíµ Efectivo</span>
                  <% when 'card' %>
                    <span class="text-blue-600">üí≥ Tarjeta</span>
                  <% when 'credit' %>
                    <span class="text-purple-600">üïí Cr√©dito</span>
                  <% when 'mixed' %>
                    <span class="text-orange-600">üí∞ Mixto</span>
                  <% end %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-sm font-semibold text-gray-900">$<%= number_with_precision(sale.total, precision: 2) %></td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600"><%= sale.created_at.strftime("%H:%M") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-center text-gray-500 py-8">No hubo ventas en este turno</p>
    <% end %>
  </div>

  <!-- Detalle Completo de Flujos de Efectivo -->
  <% if @register_session.cash_register_flows.any? %>
    <div class="bg-white rounded-lg shadow-md p-6 mb-6 border-t-4 border-purple-500">
      <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
        <span class="text-2xl mr-2">üí∞</span>
        Detalle Completo de Flujos de Efectivo
      </h2>
      
      <!-- Resumen de totales -->
      <div class="grid grid-cols-3 gap-4 mb-6 p-4 bg-purple-50 rounded-lg">
        <div class="text-center">
          <p class="text-sm text-gray-600 mb-1">‚ûï Total Ingresos</p>
          <p class="text-2xl font-bold text-green-600">
            +$<%= number_with_precision(@register_session.cash_register_flows.inflows.active.sum(:amount), precision: 2, delimiter: ',') %>
          </p>
          <p class="text-xs text-gray-500 mt-1">
            <%= @register_session.cash_register_flows.inflows.active.count %> movimientos
          </p>
        </div>
        <div class="text-center">
          <p class="text-sm text-gray-600 mb-1">‚ûñ Total Egresos</p>
          <p class="text-2xl font-bold text-red-600">
            -$<%= number_with_precision(@register_session.cash_register_flows.outflows.active.sum(:amount), precision: 2, delimiter: ',') %>
          </p>
          <p class="text-xs text-gray-500 mt-1">
            <%= @register_session.cash_register_flows.outflows.active.count %> movimientos
          </p>
        </div>
        <div class="text-center">
          <p class="text-sm text-gray-600 mb-1">üíº Balance Neto</p>
          <% net_balance = @register_session.cash_register_flows.inflows.active.sum(:amount) - @register_session.cash_register_flows.outflows.active.sum(:amount) %>
          <p class="text-2xl font-bold <%= net_balance >= 0 ? 'text-blue-600' : 'text-orange-600' %>">
            <%= net_balance >= 0 ? '+' : '' %>$<%= number_with_precision(net_balance, precision: 2, delimiter: ',') %>
          </p>
        </div>
      </div>
      
      <!-- Tabla detallada de movimientos -->
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-purple-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-purple-700 uppercase">Hora</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-purple-700 uppercase">Tipo</th>
              <th class="px-4 py-3 text-right text-xs font-medium text-purple-700 uppercase">Monto</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-purple-700 uppercase">Descripci√≥n</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-purple-700 uppercase">Creado por</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-purple-700 uppercase">Autorizado por</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @register_session.cash_register_flows.order(created_at: :asc).each do |flow| %>
              <tr class="<%= flow.cancelled? ? 'bg-gray-100 opacity-60' : 'hover:bg-gray-50' %>">
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
                  <%= flow.created_at.strftime("%H:%M:%S") %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-<%= flow.badge_color %>-100 text-<%= flow.badge_color %>-800">
                    <%= flow.icon %> <%= flow.type_name %>
                  </span>
                  <% if flow.cancelled? %>
                    <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                      ‚ùå Cancelado
                    </span>
                  <% end %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-right font-semibold <%= flow.cancelled? ? 'line-through text-gray-500' : (flow.inflow? ? 'text-green-600' : 'text-red-600') %>">
                  <%= flow.sign %>$<%= number_with_precision(flow.amount, precision: 2, delimiter: ',') %>
                </td>
                <td class="px-4 py-3 text-sm text-gray-900">
                  <%= flow.description %>
                  <% if flow.cancelled? %>
                    <div class="mt-1 text-xs text-gray-600 italic">
                      <strong>Raz√≥n de cancelaci√≥n:</strong> <%= flow.cancellation_reason %>
                    </div>
                  <% end %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600">
                  <%= flow.created_by.name %>
                  <div class="text-xs text-gray-500"><%= flow.created_by.role_name %></div>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-600">
                  <%= flow.authorized_by.name %>
                  <div class="text-xs text-gray-500"><%= flow.authorized_by.role_name %></div>
                  <% if flow.cancelled? %>
                    <div class="mt-1 text-xs text-red-600">
                      Cancelado por: <%= flow.cancelled_by&.name %>
                    </div>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-purple-50">
            <tr>
              <td colspan="2" class="px-4 py-3 text-sm font-semibold text-purple-900">
                TOTALES:
              </td>
              <td class="px-4 py-3 text-sm text-right">
                <% 
                  total_inflows = @register_session.cash_register_flows.inflows.active.sum(:amount)
                  total_outflows = @register_session.cash_register_flows.outflows.active.sum(:amount)
                  net_balance = total_inflows - total_outflows
                %>
