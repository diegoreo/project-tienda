<div class="min-h-screen bg-gray-50 py-8">
  <div class="container mx-auto px-4 max-w-4xl">
    
    <!-- Header -->
    <div class="bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg shadow-lg p-6 mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold">‚úÖ Turno Cerrado Exitosamente</h1>
          <p class="text-green-100 mt-2">Sesi√≥n #<%= @register_session.id %> - <%= @register_session.register.display_name %></p>
        </div>
        <svg class="w-16 h-16 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
    </div>

    <!-- Botones de Acci√≥n -->
    <div class="flex justify-between items-center mb-6 no-print">
      <div class="flex space-x-3">
        <button onclick="window.print()" 
                class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-lg shadow transition flex items-center space-x-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
          </svg>
          <span>Imprimir</span>
        </button>
        
        <% if policy(@register_session).closure_report_detailed? %>
          <%= link_to closure_report_detailed_register_session_path(@register_session),
              class: "bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-6 rounded-lg shadow transition flex items-center space-x-2" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            <span>Ver Detallado</span>
          <% end %>
        <% end %>
      </div>
      
      <%= link_to "‚Üê Volver", register_sessions_path, 
          class: "bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-6 rounded-lg shadow transition" %>
    </div>

    <!-- Informaci√≥n del Turno -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
        <svg class="w-6 h-6 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Informaci√≥n del Turno
      </h2>
      
      <div class="grid grid-cols-2 gap-4">
        <div>
          <p class="text-sm text-gray-600">Fecha de apertura:</p>
          <p class="text-lg font-semibold text-gray-900"><%= @report_data[:opened_at].strftime("%d/%m/%Y %H:%M") %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-600">Fecha de cierre:</p>
          <p class="text-lg font-semibold text-gray-900"><%= @report_data[:closed_at].strftime("%d/%m/%Y %H:%M") %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-600">Abierto por:</p>
          <p class="text-lg font-semibold text-gray-900"><%= @report_data[:opened_by].name %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-600">Duraci√≥n:</p>
          <p class="text-lg font-semibold text-gray-900"><%= @report_data[:duration] ? "#{@report_data[:duration]} horas" : "-" %></p>
        </div>
      </div>
    </div>

    <!-- Resumen de Ventas -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
        <svg class="w-6 h-6 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
        </svg>
        Sus Ventas
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-6 border-2 border-green-300">
          <p class="text-sm text-green-700 mb-1">Total Vendido</p>
          <p class="text-4xl font-black text-green-800">$<%= number_with_precision(@report_data[:total_sales], precision: 2) %></p>
          <p class="text-xs text-green-600 mt-2"><%= @report_data[:sales_count] %> ventas completadas</p>
        </div>
        
        <div class="space-y-3">
          <div class="flex items-center justify-between bg-gray-50 rounded-lg p-3">
            <span class="text-sm text-gray-700 flex items-center">
              <span class="text-xl mr-2">üíµ</span>
              Efectivo:
            </span>
            <span class="text-lg font-bold text-green-700">$<%= number_with_precision(@report_data[:total_cash_sales], precision: 2) %></span>
          </div>
          
          <div class="flex items-center justify-between bg-gray-50 rounded-lg p-3">
            <span class="text-sm text-gray-700 flex items-center">
              <span class="text-xl mr-2">üí≥</span>
              Tarjeta:
            </span>
            <span class="text-lg font-bold text-blue-700">$<%= number_with_precision(@report_data[:total_card_sales], precision: 2) %></span>
          </div>
          
          <div class="flex items-center justify-between bg-gray-50 rounded-lg p-3">
            <span class="text-sm text-gray-700 flex items-center">
              <span class="text-xl mr-2">üïí</span>
              Cr√©dito:
            </span>
            <span class="text-lg font-bold text-purple-700">$<%= number_with_precision(@report_data[:total_credit_sales], precision: 2) %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Flujos de Efectivo -->
    <% if @register_session.cash_register_flows.any? %>
      <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg shadow-lg p-6 mb-6 border-2 border-purple-200">
        <h2 class="text-2xl font-bold text-gray-900 mb-4 text-center flex items-center justify-center">
          <span class="text-3xl mr-2">üí∞</span>
          Flujos de Efectivo del Turno
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
          <!-- Total Ingresos -->
          <div class="bg-white rounded-lg p-6 shadow text-center">
            <p class="text-sm text-gray-600 mb-2">‚ûï Ingresos</p>
            <p class="text-3xl font-bold text-green-600">
              +$<%= number_with_precision(@register_session.cash_register_flows.inflows.active.sum(:amount), precision: 2, delimiter: ',') %>
            </p>
            <p class="text-xs text-gray-500 mt-2">
              <%= @register_session.cash_register_flows.inflows.active.count %> 
              <%= @register_session.cash_register_flows.inflows.active.count == 1 ? 'movimiento' : 'movimientos' %>
            </p>
          </div>
          
          <!-- Total Egresos -->
          <div class="bg-white rounded-lg p-6 shadow text-center">
            <p class="text-sm text-gray-600 mb-2">‚ûñ Egresos</p>
            <p class="text-3xl font-bold text-red-600">
              -$<%= number_with_precision(@register_session.cash_register_flows.outflows.active.sum(:amount), precision: 2, delimiter: ',') %>
            </p>
            <p class="text-xs text-gray-500 mt-2">
              <%= @register_session.cash_register_flows.outflows.active.count %> 
              <%= @register_session.cash_register_flows.outflows.active.count == 1 ? 'movimiento' : 'movimientos' %>
            </p>
          </div>
          
          <!-- Balance Neto -->
          <div class="bg-white rounded-lg p-6 shadow text-center">
            <p class="text-sm text-gray-600 mb-2">üíº Balance Neto</p>
            <% net_balance = @register_session.cash_register_flows.inflows.active.sum(:amount) - @register_session.cash_register_flows.outflows.active.sum(:amount) %>
            <p class="text-3xl font-bold <%= net_balance >= 0 ? 'text-blue-600' : 'text-orange-600' %>">
              <%= net_balance >= 0 ? '+' : '' %>$<%= number_with_precision(net_balance, precision: 2, delimiter: ',') %>
            </p>
            <p class="text-xs text-gray-500 mt-2">
              <%= @register_session.cash_register_flows.active.count %> movimientos totales
            </p>
          </div>
        </div>
        
        <!-- Lista resumida de movimientos -->
        <div class="bg-white rounded-lg p-4 shadow">
          <h3 class="text-sm font-bold text-gray-700 mb-3">üìã Resumen de Movimientos:</h3>
          <div class="space-y-2 max-h-48 overflow-y-auto">
            <% @register_session.cash_register_flows.active.order(created_at: :asc).each do |flow| %>
              <div class="flex justify-between items-center text-sm py-2 px-3 bg-gray-50 rounded">
                <div class="flex items-center space-x-2">
                  <span class="<%= flow.inflow? ? 'text-green-600' : 'text-red-600' %> font-bold">
                    <%= flow.icon %>
                  </span>
                  <span class="text-gray-700">
                    <%= flow.created_at.strftime("%H:%M") %>
                  </span>
                  <span class="text-gray-600 text-xs">
                    <%= truncate(flow.description, length: 30) %>
                  </span>
                </div>
                <span class="font-semibold <%= flow.inflow? ? 'text-green-700' : 'text-red-700' %>">
                  <%= flow.sign %>$<%= number_with_precision(flow.amount, precision: 2, delimiter: ',') %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- Nota informativa -->
        <div class="mt-4 bg-blue-50 border-l-4 border-blue-400 p-3 rounded">
          <p class="text-xs text-blue-800">
            <strong>‚ÑπÔ∏è Nota:</strong> Estos movimientos ya est√°n incluidos en el c√°lculo del efectivo esperado en caja.
          </p>
        </div>
      </div>
    <% end %>

    <!-- Estad√≠sticas -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          Rendimiento
        </h3>
        
        <div class="space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Ticket promedio:</span>
            <span class="text-xl font-bold text-blue-600">$<%= number_with_precision(@report_data[:average_ticket], precision: 2) %></span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Ventas por hora:</span>
            <span class="text-xl font-bold text-purple-600"><%= @report_data[:sales_per_hour] %></span>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
          Cancelaciones
        </h3>
        
        <div class="space-y-3">
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Cantidad:</span>
            <span class="text-xl font-bold text-red-600"><%= @report_data[:cancelled_sales_count] %></span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Monto total:</span>
            <span class="text-xl font-bold text-red-600">$<%= number_with_precision(@report_data[:cancelled_sales_total], precision: 2) %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Mensaje Final -->
    <div class="bg-blue-50 border-l-4 border-blue-500 p-6 rounded-lg">
      <div class="flex items-start">
        <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
          <h3 class="text-lg font-bold text-blue-900 mb-2">Turno cerrado correctamente</h3>
          <p class="text-sm text-blue-800">
            Su supervisor revisar√° el cierre de caja. Gracias por su trabajo.
          </p>
          <% if @register_session.closing_notes.present? %>
            <div class="mt-3 pt-3 border-t border-blue-200">
              <p class="text-xs text-blue-700 font-semibold mb-1">Notas de cierre:</p>
              <p class="text-sm text-blue-900"><%= @register_session.closing_notes %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
