<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto px-4 py-6">
    
    <!-- Header Section -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-800">Compras</h1>
          <p class="text-gray-600 mt-1">Gestiona las compras a proveedores</p>
          
          <!-- Estadísticas rápidas -->
          <div class="flex flex-wrap gap-3 mt-3">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-green-100 text-green-800">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
              </svg>
              <%= @pagy.count %> <%= @pagy.count == 1 ? 'Compra' : 'Compras' %>
            </span>
            <% if @purchases.any? %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-emerald-100 text-emerald-800">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Total: <%= number_to_currency(@total_filtered) %>
              </span>
            <% end %>
          </div>
        </div>
        
        <%= link_to new_purchase_path, class: "inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-green-600 to-green-700 text-white font-semibold rounded-lg shadow-lg hover:from-green-700 hover:to-green-800 transform hover:scale-105 transition duration-200" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Nueva Compra
        <% end %>
      </div>
    </div>

    <!-- Filtros -->
    <div class="bg-white rounded-lg shadow-md p-4 mb-6">
      <%= form_with url: purchases_path, method: :get, local: true, class: "space-y-4" do |f| %>
        
        <!-- Fila 1: Fechas y Búsqueda -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <!-- Fecha Desde -->
          <div>
            <%= label_tag :date_from, "Desde", class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= date_field_tag :date_from, params[:date_from], class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
          </div>

          <!-- Fecha Hasta -->
          <div>
            <%= label_tag :date_to, "Hasta", class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= date_field_tag :date_to, params[:date_to], class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
          </div>

          <!-- Buscar por ID -->
          <div>
            <%= label_tag :search_id, "Buscar ID", class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= text_field_tag :search_id, params[:search_id], placeholder: "Ej. 123", class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
          </div>

          <!-- Ordenar por -->
          <div>
            <%= label_tag :sort, "Ordenar por", class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= select_tag :sort, 
                options_for_select([
                  ["Más reciente", "date_desc"],
                  ["Más antigua", "date_asc"],
                  ["Mayor monto", "total_desc"],
                  ["Menor monto", "total_asc"]
                ], params[:sort]),
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white" %>
          </div>
        </div>

        <!-- Fila 2: Almacén, Proveedor, Monto y Estado -->
        <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
          <!-- Almacén -->
          <div>
            <%= label_tag :warehouse_id, "Almacén", class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= select_tag :warehouse_id, 
                options_from_collection_for_select(Warehouse.all, :id, :name, params[:warehouse_id]),
                prompt: "Todos",
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white" %>
          </div>

          <!-- Proveedor -->
          <div>
            <%= label_tag :supplier_id, "Proveedor", class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= select_tag :supplier_id, 
                options_from_collection_for_select(Supplier.all, :id, :name, params[:supplier_id]),
                prompt: "Todos",
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white" %>
          </div>

          <!-- Monto mínimo -->
          <div>
            <%= label_tag :min_total, "Monto mínimo", class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= number_field_tag :min_total, params[:min_total], placeholder: "$0", step: 0.01, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
          </div>

          <!-- Monto máximo -->
          <div>
            <%= label_tag :max_total, "Monto máximo", class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= number_field_tag :max_total, params[:max_total], placeholder: "$999,999", step: 0.01, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
          </div>

          <!-- Estado -->
          <div>
            <%= label_tag :processed, "Estado", class: "block text-xs font-medium text-gray-700 mb-1" %>
            <%= select_tag :processed, 
                options_for_select([
                  ["Todas", ""],
                  ["Procesadas", "true"],
                  ["Sin procesar", "false"]
                ], params[:processed]),
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white" %>
          </div>
        </div>

        <!-- Botones -->
        <div class="flex gap-3">
          <%= submit_tag "Aplicar Filtros", class: "inline-flex items-center px-5 py-2 bg-green-600 text-white text-sm font-semibold rounded-lg hover:bg-green-700 transition cursor-pointer" %>
          <%= link_to "Limpiar Filtros", purchases_path, class: "inline-flex items-center px-5 py-2 bg-gray-200 text-gray-700 text-sm font-semibold rounded-lg hover:bg-gray-300 transition" %>
        </div>

      <% end %>
    </div>

    <!-- Tabla de Compras -->
    <% if @purchases.any? %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
              <tr>
                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  ID
                </th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Proveedor
                </th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Almacén
                </th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Fecha
                </th>
                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Total
                </th>
                <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Acciones
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @purchases.each do |purchase| %>
                <tr class="hover:bg-gray-50 transition duration-150">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-500">
                    #<%= purchase.id %>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-8 w-8 bg-green-100 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                        </svg>
                      </div>
                      <div class="ml-3">
                        <div class="text-sm font-medium text-gray-900" title="<%= purchase.supplier.name %>">
                          <%= truncate(purchase.supplier.name, length: 30) %>
                        </div>
                      </div>
                    </div>
                  </td>

                  
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center text-sm text-gray-700">
                      <svg class="w-4 h-4 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                      </svg>
                      <%= purchase.warehouse.name %>
                    </div>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <div class="flex items-center">
                      <svg class="w-4 h-4 mr-2 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                      <div>
                        <div class="font-medium text-gray-900"><%= purchase.purchase_date.strftime("%d/%m/%Y") %></div>
                        <div class="text-xs text-gray-400"><%= purchase.created_at.strftime("%H:%M") %></div>
                      </div>
                    </div>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="text-lg font-bold text-green-600">
                      <%= number_to_currency(purchase.total || 0) %>
                    </span>
                  </td>
                  
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex justify-end gap-2">
                      <%= link_to purchase_path(purchase), 
                          class: "inline-flex items-center px-3 py-1.5 bg-blue-600 text-white text-xs font-semibold rounded-md hover:bg-blue-700 transition" do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        Ver
                      <% end %>
                      
                      <%= link_to edit_purchase_path(purchase), 
                          class: "inline-flex items-center px-3 py-1.5 bg-yellow-500 text-white text-xs font-semibold rounded-md hover:bg-yellow-600 transition" do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        Editar
                      <% end %>
                      
                      <%= link_to purchase_path(purchase), 
                          data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro de eliminar esta compra? Esta acción no se puede deshacer." },
                          class: "inline-flex items-center px-3 py-1.5 bg-red-100 text-red-700 text-xs font-semibold rounded-md hover:bg-red-200 transition" do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Eliminar
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!--  PAGINACIÓN -->
        <% if @purchases.any? %>
          <%= render 'shared/pagy_nav', pagy: @pagy %>
        <% end %>

      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-md p-12 text-center">
        <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
        </svg>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">No hay compras registradas</h3>
        <p class="text-gray-500 mb-6">Comienza registrando tu primera compra a proveedores</p>
        <%= link_to new_purchase_path, class: "inline-flex items-center px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Crear Primera Compra
        <% end %>
      </div>
    <% end %>

  </div>
</div>