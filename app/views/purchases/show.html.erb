<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto px-4 py-6">
    
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <%= link_to purchases_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" do %>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
            </svg>
            Compras
          <% end %>
        </li>
        <li aria-current="page">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Compra #<%= @purchase.id %></span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Alertas de Estado -->
    <% if @purchase.processed_at.present? %>
      <% if @purchase.editable? %>
        <div class="bg-yellow-50 border-l-4 border-yellow-400 rounded-lg p-4 mb-6">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-yellow-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <div class="flex-1">
              <h4 class="text-yellow-800 font-semibold mb-1">‚ö†Ô∏è Compra Editable</h4>
              <p class="text-yellow-700 text-sm">
                Esta compra puede editarse durante <strong><%= Purchase::EDITABLE_DAYS - @purchase.days_since_processed %> d√≠as m√°s</strong>
                (procesada el <%= l(@purchase.processed_at, format: :long) %>).
              </p>
            </div>
          </div>
        </div>
      <% else %>
        <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4 mb-6">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-red-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            <div class="flex-1">
              <h4 class="text-red-800 font-semibold mb-1">üîí Compra No Editable</h4>
              <p class="text-red-700 text-sm">
                Esta compra ya no puede editarse. Fue procesada hace <strong><%= @purchase.days_since_processed %> d√≠as</strong>
                (l√≠mite: <%= Purchase::EDITABLE_DAYS %> d√≠as).
              </p>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-blue-50 border-l-4 border-blue-500 rounded-lg p-4 mb-6">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-blue-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div class="flex-1">
            <h4 class="text-blue-800 font-semibold mb-1">‚ÑπÔ∏è Sin Procesar</h4>
            <p class="text-blue-700 text-sm">
              Esta compra a√∫n no ha sido procesada en el inventario.
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Header con acciones -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-800">
            Compra #<%= @purchase.id %>
          </h1>
          <p class="text-gray-600 mt-1">Detalles de la compra realizada</p>
        </div>

        <!-- Botones de acci√≥n -->
        <div class="flex flex-col sm:flex-row gap-3">
          <% if @purchase.editable? %>
            <%= link_to edit_purchase_path(@purchase), 
                class: "inline-flex items-center justify-center px-6 py-3 bg-yellow-500 text-white font-semibold rounded-lg shadow-lg hover:bg-yellow-600 transform hover:scale-105 transition duration-200" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Editar
            <% end %>
          <% end %>
          
          <%= link_to purchase_path(@purchase), 
              data: { turbo_method: :delete, turbo_confirm: "¬øEst√° seguro de eliminar esta compra? Esta acci√≥n no se puede deshacer." },
              class: "inline-flex items-center justify-center px-6 py-3 bg-red-600 text-white font-semibold rounded-lg shadow-lg hover:bg-red-700 transform hover:scale-105 transition duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
            Eliminar
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      
      <!-- Columna Principal - Productos -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-gradient-to-r from-green-600 to-green-700 px-6 py-4">
            <h2 class="text-xl font-bold text-white flex items-center">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
              </svg>
              Productos Comprados
            </h2>
          </div>
          
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
                <tr>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    Producto
                  </th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    Cantidad
                  </th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    P. Compra
                  </th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    Conversi√≥n
                  </th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    Subtotal
                  </th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    Costo/Pza
                  </th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    Pzas Total
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @purchase.purchase_items.each do |item| %>
                  <tr class="hover:bg-gray-50 transition duration-150">
                    <td class="px-4 py-3">
                      <div class="text-sm font-medium text-gray-900">
                        <%= item.product.name %>
                      </div>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-700">
                      <%= number_with_delimiter(item.quantity.to_i) %>
                    </td>
                    <td class="px-4 py-3 text-sm font-medium text-gray-700">
                      <%= number_to_currency(item.purchase_price) %>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-700 text-center">
                      <%= item.conversion_factor %>x
                    </td>
                    <td class="px-4 py-3">
                      <span class="text-sm font-semibold text-green-600">
                        <%= number_to_currency(item.subtotal || 0) %>
                      </span>
                    </td>
                    <td class="px-4 py-3 text-sm text-gray-700">
                      <%= number_to_currency(item.cost_per_piece || 0) %>
                    </td>
                    <td class="px-4 py-3 text-sm font-medium text-gray-700">
                      <%= number_with_delimiter(item.quantity_sale_units.to_i || 0) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
              <tfoot>
                <tr class="bg-gradient-to-r from-green-50 to-green-100 border-t-2 border-green-200">
                  <td colspan="4" class="px-4 py-4 text-right text-base font-bold text-gray-800">
                    TOTAL DE LA COMPRA:
                  </td>
                  <td class="px-4 py-4">
                    <span class="text-2xl font-bold text-green-600">
                      <%= number_to_currency(@purchase.total || 0) %>
                    </span>
                  </td>
                  <td colspan="2"></td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>

      <!-- Columna Lateral - Informaci√≥n -->
      <div class="space-y-6">
        
        <!-- Informaci√≥n General -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-gradient-to-r from-green-600 to-green-700 px-6 py-4">
            <h2 class="text-lg font-bold text-white flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Informaci√≥n
            </h2>
          </div>
          
          <div class="p-6 space-y-4">
            <!-- Proveedor -->
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Proveedor</label>
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10 bg-green-100 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-semibold text-gray-900">
                    <%= @purchase.supplier.name %>
                  </p>
                </div>
              </div>
            </div>

            <div class="border-t border-gray-200"></div>

            <!-- Almac√©n -->
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Almac√©n</label>
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10 bg-teal-100 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm font-semibold text-gray-900">
                    <%= @purchase.warehouse.name %>
                  </p>
                </div>
              </div>
            </div>

            <div class="border-t border-gray-200"></div>

            <!-- Fecha de Compra -->
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Fecha de Compra</label>
              <div class="flex items-center text-sm text-gray-700">
                <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                <%= l(@purchase.purchase_date, format: :long) %>
              </div>
            </div>

            <!-- Fecha de Procesamiento -->
            <% if @purchase.processed_at.present? %>
              <div class="border-t border-gray-200 pt-4">
                <label class="block text-xs font-medium text-gray-500 mb-1">Procesada el</label>
                <div class="flex items-center text-sm text-gray-700">
                  <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <%= l(@purchase.processed_at, format: :long) %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Total Destacado -->
        <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-6 text-white">
          <div class="text-center">
            <p class="text-sm font-medium opacity-90 mb-2">Total de la Compra</p>
            <p class="text-4xl font-bold mb-1">
              <%= number_to_currency(@purchase.total || 0) %>
            </p>
            <p class="text-xs opacity-75">
              <%= pluralize(@purchase.purchase_items.count, 'producto') %>
            </p>
          </div>
        </div>

      </div>

    </div>

    <!-- Botones de navegaci√≥n -->
    <div class="mt-6 flex gap-3">
      <%= link_to purchases_path, 
          class: "inline-flex items-center px-6 py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 transition" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Volver a Compras
      <% end %>
    </div>

  </div>
</div>