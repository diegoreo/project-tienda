<div class="category-card">
  <h2 class="category-title"><%= category.name %></h2>
  <p class="category-description"><%= category.description %></p>

  <div class="category-actions">
    <%= link_to "Editar", edit_category_path(category), class: "btn-edit" %>
    <%= link_to "Eliminar", category_path(category), 
          data: { turbo_method: :delete, turbo_confirm: "¿Estas seguro de eliminar esta categoría?" }, 
          class: "btn-delete" %>
  </div>
</div>
