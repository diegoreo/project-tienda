<div class="min-h-screen bg-gradient-to-br from-teal-50 to-cyan-50 py-4 sm:py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    
    <!-- Breadcrumb -->
    <nav class="mb-4 sm:mb-6 text-xs sm:text-sm">
      <%= link_to "Clientes", customers_path, class: "text-teal-600 hover:text-teal-800" %> 
      <span class="text-gray-400 mx-1 sm:mx-2">/</span>
      <%= link_to @customer.name, customer_path(@customer), class: "text-teal-600 hover:text-teal-800 truncate inline-block max-w-[100px] sm:max-w-none" %>
      <span class="text-gray-400 mx-1 sm:mx-2">/</span>
      <span class="text-gray-600">Historial de Compras</span>
    </nav>

    <!-- Header -->
    <div class="bg-gradient-to-r from-teal-600 to-cyan-600 rounded-xl shadow-lg p-4 sm:p-6 mb-4 sm:mb-6 text-white">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div class="flex-1">
          <h1 class="text-2xl sm:text-3xl font-bold mb-2">ðŸ“Š Historial Completo</h1>
          <p class="text-teal-100 text-base sm:text-lg break-words"><%= @customer.name %></p>
          <p class="text-teal-200 text-xs sm:text-sm mt-1"><%= @total_sales_count %> ventas registradas</p>
        </div>
        
        <div class="flex gap-2 sm:gap-3">
          <%= link_to customer_path(@customer), class: "flex-1 sm:flex-none px-4 py-2 bg-white text-teal-700 font-semibold rounded-lg hover:bg-teal-50 transition flex items-center justify-center gap-2 text-sm sm:text-base" do %>
            <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            <span class="hidden sm:inline">Volver al Cliente</span>
            <span class="sm:hidden">Volver</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Resumen rÃ¡pido -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6 mb-4 sm:mb-6">
      <div class="bg-white rounded-xl shadow-md p-4 sm:p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-xs sm:text-sm text-gray-500 mb-1">Total de Compras</p>
            <p class="text-2xl sm:text-3xl font-bold text-gray-800"><%= @total_sales_count %></p>
          </div>
          <div class="p-2 sm:p-3 bg-teal-100 rounded-full">
            <svg class="w-6 h-6 sm:w-8 sm:h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-md p-4 sm:p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-xs sm:text-sm text-gray-500 mb-1">Monto Total</p>
            <p class="text-2xl sm:text-3xl font-bold text-teal-600"><%= number_to_currency(@total_sales_amount) %></p>
          </div>
          <div class="p-2 sm:p-3 bg-green-100 rounded-full">
            <svg class="w-6 h-6 sm:w-8 sm:h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabla de ventas -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden mb-4 sm:mb-6">
      <div class="bg-gradient-to-r from-teal-500 to-cyan-500 px-4 sm:px-6 py-3 sm:py-4">
        <h2 class="text-lg sm:text-xl font-bold text-white flex items-center gap-2">
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          <span class="text-sm sm:text-base">Todas las Ventas</span>
        </h2>
      </div>
      
      <% if @sales.any? %>
        <div class="overflow-x-auto">
          <table class="w-full text-xs sm:text-sm">
            <thead class="bg-gray-50 border-b">
              <tr>
                <th class="px-3 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase">Folio</th>
                <th class="px-3 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase">Fecha</th>
                <th class="px-3 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase hidden sm:table-cell">AlmacÃ©n</th>
                <th class="px-3 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase">Total</th>
                <th class="px-3 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase hidden md:table-cell">MÃ©todo</th>
                <th class="px-3 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase">Estado</th>
                <th class="px-3 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @sales.each do |sale| %>
                <tr class="hover:bg-gray-50 transition">
                  <td class="px-3 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm font-mono text-gray-600">#<%= sale.id %></td>
                  <td class="px-3 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm text-gray-900">
                    <span class="hidden sm:inline"><%= sale.created_at.strftime("%d/%m/%Y %H:%M") %></span>
                    <span class="sm:hidden"><%= sale.created_at.strftime("%d/%m/%y") %></span>
                  </td>
                  <td class="px-3 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm text-gray-600 hidden sm:table-cell"><%= sale.warehouse.name %></td>
                  <td class="px-3 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm font-semibold text-gray-900"><%= number_to_currency(sale.total) %></td>
                  <td class="px-3 sm:px-6 py-3 sm:py-4 hidden md:table-cell">
                    <span class="px-2 py-1 text-xs font-semibold rounded-full whitespace-nowrap
                      <%= case sale.payment_method
                          when 'cash' then 'bg-green-100 text-green-700'
                          when 'card' then 'bg-blue-100 text-blue-700'
                          when 'credit' then 'bg-orange-100 text-orange-700'
                          when 'mixed' then 'bg-purple-100 text-purple-700'
                          end %>">
                      <%= I18n.t("enums.sale.payment_method.#{sale.payment_method}") %>
                    </span>
                  </td>
                  <td class="px-3 sm:px-6 py-3 sm:py-4">
                    <span class="px-2 py-1 text-xs font-semibold rounded-full whitespace-nowrap
                      <%= case sale.payment_status
                          when 'paid' then 'bg-green-100 text-green-700'
                          when 'partial' then 'bg-yellow-100 text-yellow-700'
                          when 'pending' then 'bg-red-100 text-red-700'
                          end %>">
                      <%= I18n.t("enums.sale.payment_status.#{sale.payment_status}") %>
                    </span>
                  </td>
                  <td class="px-3 sm:px-6 py-3 sm:py-4">
                    <%= link_to "Ver", sale_path(sale), class: "text-xs sm:text-sm text-teal-600 hover:text-teal-800 font-medium" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- PaginaciÃ³n -->
        <% if @pagy.pages > 1 %>
          <div class="px-4 sm:px-6 py-4 border-t border-gray-200 bg-gray-50">
            <%== pagy_nav(@pagy) %>
          </div>
        <% end %>

      <% else %>
        <div class="px-4 sm:px-6 py-8 sm:py-12 text-center">
          <svg class="w-12 h-12 sm:w-16 sm:h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
          </svg>
          <p class="text-gray-500 text-sm sm:text-base">Este cliente no tiene compras registradas</p>
        </div>
      <% end %>
    </div>

    <!-- BotÃ³n para volver al perfil del cliente -->
    <div class="flex justify-center">
      <%= link_to customer_path(@customer), class: "w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 bg-gradient-to-r from-teal-600 to-cyan-600 text-white font-bold rounded-xl hover:from-teal-700 hover:to-cyan-700 transition shadow-lg flex items-center justify-center gap-2 text-sm sm:text-base" do %>
        <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        Volver al Perfil del Cliente
      <% end %>
    </div>

  </div>
</div>