<div class="min-h-screen bg-gradient-to-br from-teal-50 to-cyan-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    
    <!-- Header -->
    <div class="mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-4xl font-bold text-gray-900">Clientes</h1>
        <p class="mt-2 text-gray-600">Gestiona tu cartera de clientes y créditos</p>
      </div>
      <%= link_to new_customer_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-gradient-to-r from-teal-600 to-cyan-600 text-white font-bold rounded-lg hover:from-teal-700 hover:to-cyan-700 transition shadow-lg" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Nuevo Cliente
      <% end %>
    </div>

    <!-- Buscador y Filtros Colapsables -->
    <div class="bg-white rounded-xl shadow-md p-6 mb-6" data-controller="dropdown">
      <%= form_with url: customers_path, method: :get, local: true, 
          data: { controller: "auto-submit" },
          class: "" do |f| %>
        
        <!-- Barra de búsqueda + Botón filtros (SIEMPRE VISIBLE) -->
        <div class="flex gap-4 items-center">
          <div class="flex-1 relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <%= f.text_field :search,
                value: params[:search],
                placeholder: "Buscar por nombre, teléfono o email...",
                class: "w-full pl-12 pr-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition text-base",
                data: { action: "input->auto-submit#submit" } %>
          </div>
          
          <!-- Botón toggle filtros -->
          <button type="button"
                  data-action="click->dropdown#toggle"
                  class="flex items-center gap-2 px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg transition whitespace-nowrap">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
            </svg>
            Filtros
            <svg class="w-4 h-4 transform transition-transform" 
                data-dropdown-target="icon"
                fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
        </div>

        <!-- Filtros colapsables (ocultos por defecto) -->
        <div data-dropdown-target="menu" class="hidden">
          <div class="mt-6 pt-6 border-t border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <!-- Tipo de cliente -->
              <div>
                <%= f.label :type, "Tipo de cliente", class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= f.select :type, 
                  options_for_select([
                    ['Todos', ''],
                    ['Mostrador', 'walk_in'],
                    ['Regular', 'regular'],
                    ['Mayorista', 'wholesale']
                  ], params[:type]), 
                  {}, 
                  class: "w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition",
                  data: { action: "change->auto-submit#submit" } %>
              </div>

              <!-- Solo con adeudo -->
              <div class="flex items-end pb-2">
                <label class="flex items-center gap-3 cursor-pointer">
                  <%= f.check_box :with_debt, 
                      { class: "w-5 h-5 text-teal-600 border-gray-300 rounded focus:ring-teal-500",
                        data: { action: "change->auto-submit#submit" } }, 
                      "true", "false" %>
                  <span class="text-sm font-medium text-gray-700">Solo mostrar clientes con adeudo</span>
                </label>
              </div>
            </div>

            <!-- Botón limpiar -->
            <div class="mt-4 flex justify-end">
              <%= link_to "Limpiar filtros", customers_path, 
                  class: "px-6 py-2 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Contador de resultados (opcional pero útil) -->
    <% if params[:search].present? || params[:type].present? || params[:with_debt].present? %>
      <div class="mb-4 px-2">
        <p class="text-sm text-gray-600">
          Mostrando <strong><%= @customers.count %></strong> cliente<%= @customers.count != 1 ? 's' : '' %>
          <% if params[:search].present? %>
            · Búsqueda: "<strong class="text-teal-600"><%= params[:search] %></strong>"
          <% end %>
        </p>
      </div>
    <% end %>

    <!-- Tabla de clientes -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gradient-to-r from-teal-600 to-cyan-600 text-white">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Nombre</th>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Teléfono</th>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Email</th>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Tipo</th>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Límite Crédito</th>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Deuda Actual</th>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Crédito Disponible</th>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Acciones</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @customers.each do |customer| %>
              <tr class="hover:bg-teal-50 transition">
                <td class="px-6 py-4">
                  <%= link_to customer_path(customer), class: "font-semibold text-teal-600 hover:text-teal-800" do %>
                    <%= customer.name %>
                  <% end %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-600">
                  <%= customer.phone || "-" %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-600">
                  <%= customer.email || "-" %>
                </td>
                <td class="px-6 py-4">
                  <span class="px-3 py-1 text-xs font-semibold rounded-full
                    <%= case customer.customer_type
                        when 'walk_in' then 'bg-blue-100 text-blue-700'
                        when 'regular' then 'bg-green-100 text-green-700'
                        when 'wholesale' then 'bg-orange-100 text-orange-700'
                        end %>">
                    <%= I18n.t("enums.customer.customer_type.#{customer.customer_type}") %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm font-semibold text-gray-700">
                  <%= number_to_currency(customer.credit_limit || 0) %>
                </td>
                <td class="px-6 py-4">
                  <span class="text-sm font-bold <%= customer.current_debt > 0 ? 'text-red-600' : 'text-green-600' %>">
                    <%= number_to_currency(customer.current_debt) %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm font-semibold text-teal-600">
                  <%= number_to_currency(customer.available_credit) %>
                </td>
                <td class="px-6 py-4">
                  <div class="flex gap-2">
                    <%= link_to customer_path(customer), class: "px-3 py-1 bg-teal-500 text-white text-sm font-semibold rounded hover:bg-teal-600 transition" do %>
                      Ver
                    <% end %>
                    <%= link_to edit_customer_path(customer), class: "px-3 py-1 bg-yellow-500 text-white text-sm font-semibold rounded hover:bg-yellow-600 transition" do %>
                      Editar
                    <% end %>
                    <%= link_to customer_path(customer),
                      data: { turbo_method: :delete, turbo_confirm: "¿Eliminar a #{customer.name}?" },
                      class: "px-3 py-1 bg-red-500 text-white text-sm font-semibold rounded hover:bg-red-600 transition" do %>
                      Eliminar
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Empty state -->
      <% if @customers.empty? %>
        <div class="py-16 text-center">
          <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <p class="text-gray-500 text-lg font-medium">No se encontraron clientes</p>
          <p class="text-gray-400 mt-2">Intenta ajustar los filtros o crear un nuevo cliente</p>
        </div>
      <% end %>

      <!-- PAGINACIÓN -->
      <% if @customers.any? %>
        <%= render 'shared/pagy_nav', pagy: @pagy %>
      <% end %>

    </div>

  </div>
</div>