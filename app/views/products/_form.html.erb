<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <%= form_with(model: @product, local: true, class: "space-y-6", data: { controller: "product-type" }) do |form| %>
    
    <!-- Encabezado -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-4 rounded-lg shadow-md">
      <h2 class="text-2xl font-bold">
        <%= @product.new_record? ? "Nuevo Producto" : "Editar Producto" %>
      </h2>
      <p class="text-blue-100 text-sm mt-1">Complete la informaci√≥n del producto</p>
    </div>

    <!-- SECCI√ìN 1: Informaci√≥n B√°sica -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Informaci√≥n B√°sica
      </h3>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Nombre + Categor√≠a -->
        <div>
          <%= form.label :name, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            Nombre del producto <span class="text-red-500">*</span>
          <% end %>
          <%= form.text_field :name, 
              class: "w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition", 
              placeholder: "Ej. Coca-Cola 600ml",
              required: true %>
          <%= field_error_messages(@product, :name) %>
        </div>

        <div>
          <%= form.label :category_id, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            Categor√≠a <span class="text-red-500">*</span>
          <% end %>
          <%= form.collection_select :category_id, Category.order(:name), :id, :name, 
              { prompt: "Selecciona una categor√≠a" }, 
              class: "w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition bg-white",
              required: true %>
          <%= field_error_messages(@product, :category_id) %>
        </div>

        <!-- Descripci√≥n (full width) -->
        <div class="lg:col-span-2">
          <%= form.label :description, "Descripci√≥n (opcional)", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= form.text_area :description, 
              class: "w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition", 
              rows: 2, 
              placeholder: "Describe el producto..." %>
          <%= field_error_messages(@product, :description) %>
        </div>
      </div>
    </div>

    <!-- SECCI√ìN 1.5: Tipo de Producto y Vinculaci√≥n (NUEVA) -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
        </svg>
        Tipo de Producto y Vinculaci√≥n
      </h3>

      <div class="space-y-6">
        <!-- Tipo de producto -->
        <div>
          <%= form.label :product_type, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            Tipo de producto <span class="text-red-500">*</span>
          <% end %>
          <%= form.select :product_type, 
              [
                ['Producto normal (sin vinculaci√≥n)', 'base'],
                ['Producto maestro (unidad base: rollo, pieza, litro)', 'master'],
                ['Presentaci√≥n (paquete, caja, six-pack)', 'presentation']
              ],
              { selected: @product.product_type || 'base' },
              class: "w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition bg-white",
              data: { 
                product_type_target: "typeSelect",
                action: "change->product-type#toggleFields"
              },
              required: true %>
          <%= field_error_messages(@product, :product_type) %>
          
          <!-- Ayudas contextuales -->
          <div class="mt-3 space-y-2 text-sm">
            <div class="p-3 bg-gray-50 border-l-4 border-gray-400 rounded" data-product-type-target="baseHelp">
              <p class="text-gray-700">
                <strong>Producto normal:</strong> Un producto independiente sin relaci√≥n con otros (ej: Coca-Cola 2L, Leche 1L).
              </p>
            </div>
            
            <div class="hidden p-3 bg-blue-50 border-l-4 border-blue-400 rounded" data-product-type-target="masterHelp">
              <p class="text-blue-800">
                <strong>Producto maestro:</strong> La unidad m√°s peque√±a que maneja el inventario real (ej: 1 rollo, 1 pieza, 1 litro). Otros productos pueden vincularse a este.
              </p>
            </div>
            
            <div class="hidden p-3 bg-indigo-50 border-l-4 border-indigo-400 rounded" data-product-type-target="presentationHelp">
              <p class="text-indigo-800">
                <strong>Presentaci√≥n:</strong> Una forma de vender el producto maestro en otra cantidad (ej: paquete de 4 rollos, caja de 24 piezas). El inventario se descuenta del producto maestro.
              </p>
            </div>
          </div>
        </div>

        <!-- Campos para PRESENTACI√ìN (solo visible cuando product_type = presentation) -->
        <div class="hidden space-y-6" data-product-type-target="presentationFields">
          <!-- Producto maestro CON BUSCADOR -->
          <div data-controller="master-product-search">
            <%= form.label :master_product_id, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
              Producto maestro <span class="text-red-500">*</span>
            <% end %>
            
            <!-- Campo oculto para guardar el ID -->
            <%= form.hidden_field :master_product_id, 
                data: { master_product_search_target: "hiddenField" },
                value: @product.master_product_id %>
            
            <!-- Input de b√∫squeda -->
            <div class="relative">
              <input type="text"
                    data-master-product-search-target="searchInput"
                    data-action="input->master-product-search#search keydown->master-product-search#navigate"
                    class="w-full px-4 py-2.5 pr-10 border-2 border-indigo-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition"
                    placeholder="Buscar producto maestro..."
                    value="<%= @product.master_product&.name %>"
                    autocomplete="off">
              
              <!-- Icono de b√∫squeda -->
              <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
              
              <!-- Bot√≥n de limpiar (solo visible cuando hay selecci√≥n) -->
              <button type="button"
                      data-master-product-search-target="clearButton"
                      data-action="click->master-product-search#clear"
                      class="<%= @product.master_product_id ? '' : 'hidden' %> absolute inset-y-0 right-10 flex items-center pr-3 text-gray-400 hover:text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
              </button>
            </div>
            
            <!-- Resultados de b√∫squeda -->
            <div data-master-product-search-target="searchResults"
                class="hidden absolute z-50 mt-1 w-full bg-white border-2 border-indigo-300 rounded-lg shadow-xl max-h-80 overflow-y-auto">
              <!-- Los resultados se insertan aqu√≠ din√°micamente -->
            </div>
            
            <%= field_error_messages(@product, :master_product_id) %>
            
            <div class="mt-2 space-y-2">
              <p class="text-sm text-gray-500 flex items-start">
                <svg class="w-4 h-4 mr-1 mt-0.5 text-indigo-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Escribe para buscar el producto base. Tambi√©n puedes usar el lector de c√≥digo de barras.
              </p>
              
              <div class="flex items-center gap-2 text-xs text-gray-600 bg-gray-50 p-2 rounded border border-gray-200">
                <kbd class="px-2 py-1 bg-white border border-gray-300 rounded shadow-sm font-mono">‚Üë‚Üì</kbd>
                <span>Navegar</span>
                <kbd class="px-2 py-1 bg-white border border-gray-300 rounded shadow-sm font-mono">Enter</kbd>
                <span>Seleccionar</span>
                <kbd class="px-2 py-1 bg-white border border-gray-300 rounded shadow-sm font-mono">Esc</kbd>
                <span>Cerrar</span>
              </div>
            </div>
          </div>

          <!-- Factor de conversi√≥n -->
          <div>
            <%= form.label :conversion_factor, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
              Factor de conversi√≥n <span class="text-red-500">*</span>
            <% end %>
            <%= form.number_field :conversion_factor,
                class: "w-full px-4 py-2.5 border-2 border-indigo-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition",
                step: 0.001,
                min: 0.001,
                placeholder: "Ej. 4.0",
                value: @product.conversion_factor || 1.0 %>
            <%= field_error_messages(@product, :conversion_factor) %>
            <p class="mt-2 text-sm text-gray-500 flex items-start">
              <svg class="w-4 h-4 mr-1 mt-0.5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Cu√°ntas unidades del producto maestro contiene esta presentaci√≥n. <strong>Ejemplo:</strong> Si 1 paquete = 4 rollos, escribe <strong>4</strong>
            </p>
          </div>

          <!-- Ejemplo visual -->
          <div class="p-4 bg-indigo-50 border border-indigo-200 rounded-lg">
            <h4 class="font-semibold text-indigo-900 mb-2 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
              Ejemplo
            </h4>
            <p class="text-sm text-indigo-800">
              <strong>Maestro:</strong> "Papel higi√©nico Rollo" (40 unidades en inventario)<br>
              <strong>Presentaci√≥n:</strong> "Papel higi√©nico Paquete x4" (conversion_factor: 4.0)<br>
              <strong>Resultado:</strong> Al vender 2 paquetes, se descontar√°n 8 rollos del inventario maestro.<br>
              <strong>Stock disponible:</strong> 40 rollos = 10 paquetes completos
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- SECCI√ìN 2: Unidades y Conversi√≥n -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
        </svg>
        Unidades y Conversi√≥n
      </h3>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Unidad de compra + Unidad de venta -->
        <div>
          <%= form.label :purchase_unit_id, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            Unidad de compra <span class="text-red-500">*</span>
          <% end %>
          <%= form.collection_select :purchase_unit_id, Unit.order(:name), :id, :name, 
              { prompt: "Seleccione unidad" }, 
              class: "w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition bg-white",
              required: true %>
          <%= field_error_messages(@product, :purchase_unit_id) %>
        </div>
        
        <div>
          <%= form.label :sale_unit_id, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            Unidad de venta <span class="text-red-500">*</span>
          <% end %>
          <%= form.collection_select :sale_unit_id, Unit.order(:name), :id, :name, 
              { prompt: "Seleccione unidad" },
              class: "w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition bg-white",
              required: true %>  
          <%= field_error_messages(@product, :sale_unit_id) %>
        </div>

        <!-- Conversi√≥n (full width) -->
        <div class="lg:col-span-2">
          <%= form.label :unit_conversion, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            Conversi√≥n (unidad compra ‚Üí unidad venta) <span class="text-red-500">*</span>
          <% end %>
          <%= form.number_field :unit_conversion, 
              class: "w-full px-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition", 
              step: 1, 
              min: 1,
              placeholder: "Ej. 24",
              required: true %>
          <p class="mt-2 text-sm text-gray-500 flex items-start">
            <svg class="w-4 h-4 mr-1 mt-0.5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Ejemplo: Si 1 caja contiene 24 piezas, escribe <strong>24</strong>
          </p>
          <%= field_error_messages(@product, :unit_conversion) %>
        </div>
      </div>
    </div>

    <!-- SECCI√ìN 3: Precio -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Precio de Venta
      </h3>

      <div class="max-w-sm">
        <%= form.label :price, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
          Precio <span class="text-red-500">*</span>
        <% end %>
        <div class="relative">
          <span class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-500 font-bold text-lg">$</span>
          <%= form.number_field :price, 
              step: 0.01, 
              min: 0,
              class: "w-full pl-10 pr-4 py-2.5 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition text-lg font-semibold", 
              placeholder: "0.00",
              required: true %>
        </div>
        <%= field_error_messages(@product, :price) %>
      </div>
    </div>

    <!-- SECCI√ìN 3.5: Stock M√≠nimo por Almac√©n -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        Alertas de Stock M√≠nimo
      </h3>

      <div class="space-y-4">
        <p class="text-sm text-gray-600 mb-4">
          Configura el stock m√≠nimo para cada almac√©n. Te alertaremos cuando el inventario est√© por debajo de estos valores.
        </p>

        <% Warehouse.order(:name).each do |warehouse| %>
          <div class="flex items-center gap-4 p-4 bg-orange-50 border border-orange-200 rounded-lg">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
                </svg>
              </div>
            </div>
            
            <div class="flex-1">
              <label class="block text-sm font-semibold text-gray-800 mb-1">
                <%= warehouse.name %>
              </label>
              <p class="text-xs text-gray-500">
                Cantidad m√≠nima para alertas de reabastecimiento
              </p>
            </div>
            
            <div class="w-32">
              <%= number_field_tag "inventory_minimums[#{warehouse.id}]", 
                  @product.persisted? ? @product.inventories.find_by(warehouse_id: warehouse.id)&.minimum_quantity : nil,
                  class: "w-full px-4 py-2.5 border-2 border-orange-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition bg-white text-center font-semibold text-lg",
                  placeholder: "10",
                  min: 0,
                  step: 1 %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-4 p-3 bg-blue-50 border-l-4 border-blue-400 rounded">
        <p class="text-sm text-blue-800 flex items-start">
          <svg class="w-4 h-4 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>
            <strong>Ejemplo:</strong> Si configuras "10" para Tienda, el sistema te alertar√° cuando el stock en Tienda sea menor a 10 unidades.
          </span>
        </p>
      </div>
    </div>

    <!-- SECCI√ìN 4: C√≥digos de barras -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6" data-controller="barcodes">
      <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"></path>
        </svg>
        C√≥digos de barras <span class="text-sm font-normal text-gray-500">(opcional)</span>
      </h3>

      <div data-barcodes-target="container" class="space-y-3">
        <%= form.fields_for :barcodes do |barcode_form| %>
          <%= render "barcode_fields", f: barcode_form %>
        <% end %>
      </div>
      
      <button type="button" 
              class="mt-4 inline-flex items-center px-4 py-2 border-2 border-purple-300 text-sm font-semibold rounded-lg text-purple-700 bg-purple-50 hover:bg-purple-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition" 
              data-action="barcodes#add">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Agregar otro c√≥digo
      </button>
    </div>

    <!-- Botones de acci√≥n -->
    <div class="flex flex-col sm:flex-row gap-3 pt-4">
      <%= form.submit @product.new_record? ? "üíæ Crear Producto" : "üíæ Guardar Cambios", 
          class: "flex-1 sm:flex-none inline-flex justify-center items-center px-8 py-3 border border-transparent text-base font-bold rounded-lg text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-lg hover:shadow-xl transition transform hover:scale-105" %>
      
      <%= link_to "Cancelar", 
          @product.new_record? ? products_path : product_path(@product), 
          class: "flex-1 sm:flex-none inline-flex justify-center items-center px-8 py-3 border-2 border-gray-300 text-base font-semibold rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition" %>
    </div>

    <!-- Template para nuevos c√≥digos -->
    <template id="barcode-template">
