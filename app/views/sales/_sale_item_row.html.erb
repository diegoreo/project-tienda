<tr class="sale-item-row hover:bg-gray-50 transition" data-pos-sale-target="itemRow">
  <%= f.hidden_field :product_id %>
  <%= f.hidden_field :unit_price %>
  <%= f.hidden_field :subtotal %>
  <%= f.hidden_field :_destroy, value: "0" %>
  
  <!-- Producto -->
  <td class="px-3 py-2 text-sm text-gray-800 font-medium" data-pos-sale-target="productName"></td>
  
  <!-- Stock -->
  <td class="px-3 py-2 text-xs font-bold" data-pos-sale-target="stockInfo"></td>
  
  <!-- Cantidad - ESTILO SIMILAR AL CAMPO "RECIBIDO" -->
  <td class="px-3 py-2">
    <%= f.number_field :quantity, 
      min: 0.001, 
      step: 0.001,
      value: 1,
      class: "w-full px-3 py-2 text-base font-bold text-right border-2 border-green-400 bg-green-50 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 hover:bg-green-100 transition shadow-sm",
      data: { action: "input->pos-sale#updateItemSubtotal" } %>
  </td>
  
  <!-- Precio -->
  <td class="px-3 py-2 text-sm font-semibold text-gray-700" data-pos-sale-target="priceDisplay"></td>
  
  <!-- Descuento - ESTILO SIMILAR AL CAMPO "RECIBIDO" -->
  <td class="px-3 py-2">
    <%= f.number_field :discount, 
      min: 0, 
      step: 0.01, 
      value: 0,
      class: "w-full px-3 py-2 text-base font-bold text-right border-2 border-orange-400 bg-orange-50 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 hover:bg-orange-100 transition shadow-sm",
      data: { action: "input->pos-sale#updateItemSubtotal" } %>
  </td>
  
  <!-- Subtotal -->
  <td class="px-3 py-2 text-sm font-bold text-green-700" data-pos-sale-target="subtotalDisplay"></td>
  
  <!-- Eliminar -->
  <td class="px-3 py-2">
    <button 
      type="button" 
      class="p-1.5 bg-red-100 text-red-600 rounded hover:bg-red-200 transition"
      data-action="click->pos-sale#removeItem"
      title="Eliminar"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
    </button>
  </td>
</tr>