<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm">
      <%= link_to "Ventas", sales_path, class: "text-green-600 hover:text-green-800" %> 
      <span class="text-gray-400 mx-2">/</span>
      <span class="text-gray-600">Venta #<%= @sale.id %></span>
    </nav>

    <!-- Header con info de la venta -->
    <div class="bg-gradient-to-r from-green-600 to-emerald-600 rounded-xl shadow-lg p-6 mb-6 text-white">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-2">
            <h1 class="text-3xl font-bold">Venta #<%= @sale.id %></h1>
            <span class="px-3 py-1 text-sm font-semibold rounded-full
              <%= @sale.status == 'completed' ? 'bg-white/20 text-white' : 'bg-red-500 text-white' %>">
              <%= @sale.status == 'completed' ? 'Completada' : 'Cancelada' %>
            </span>
          </div>
          <div class="flex flex-wrap gap-4 text-green-100">
            <span class="flex items-center gap-1">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <%= l(@sale.sale_date, format: :long) %>
            </span>
            <span class="flex items-center gap-1">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
              <%= @sale.warehouse.name %>
            </span>
          </div>
        </div>
        
        <div class="flex flex-wrap gap-3">
          <%= link_to (@sale.customer_id ? customer_path(@sale.customer) : sales_path), class: "px-4 py-2 bg-white/20 text-white font-semibold rounded-lg hover:bg-white/30 transition flex items-center gap-2" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            <%= @sale.customer_id ? "Volver al Cliente" : "Volver a Ventas" %>
          <% end %>
          
          <% if @sale.can_be_cancelled? %>
            <%= link_to cancel_sale_path(@sale), 
                data: { turbo_method: :post, turbo_confirm: "¿Cancelar esta venta y revertir el inventario?" },
                class: "px-4 py-2 bg-red-500 text-white font-semibold rounded-lg hover:bg-red-600 transition flex items-center gap-2" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Cancelar Venta
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      
      <!-- Columna izquierda: Cliente y totales -->
      <div class="lg:col-span-1 space-y-6">
        
        <!-- Información del Cliente -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h2 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Cliente
          </h2>
          
          <% if @sale.customer %>
            <div class="space-y-3">
              <%= link_to customer_path(@sale.customer), class: "block" do %>
                <p class="text-xl font-bold text-green-600 hover:text-green-800 transition">
                  <%= @sale.customer.name %>
                </p>
              <% end %>
              
              <% if @sale.customer.phone %>
                <div class="flex items-center gap-2 text-gray-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <span class="text-sm"><%= @sale.customer.phone %></span>
                </div>
              <% end %>
              
              <% if @sale.customer.email %>
                <div class="flex items-center gap-2 text-gray-600">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <span class="text-sm"><%= @sale.customer.email %></span>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 italic">Sin cliente asignado</p>
          <% end %>
        </div>

        <!-- Resumen de Pago -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h2 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            Información de Pago
          </h2>
          
          <div class="space-y-4">
            <!-- Método de pago -->
            <div>
              <p class="text-sm text-gray-500 mb-1">Método de pago</p>
              <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full
                <%= case @sale.payment_method
                    when 'cash' then 'bg-green-100 text-green-700'
                    when 'card' then 'bg-blue-100 text-blue-700'
                    when 'credit' then 'bg-orange-100 text-orange-700'
                    when 'mixed' then 'bg-purple-100 text-purple-700'
                    end %>">
                <%= I18n.t("enums.sale.payment_method.#{@sale.payment_method}") %>
              </span>
            </div>

            <!-- Estado de pago -->
            <div>
              <p class="text-sm text-gray-500 mb-1">Estado de pago</p>
              <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full
                <%= case @sale.payment_status
                    when 'paid' then 'bg-green-100 text-green-700'
                    when 'partial' then 'bg-yellow-100 text-yellow-700'
                    when 'pending' then 'bg-red-100 text-red-700'
                    end %>">
                <%= I18n.t("enums.sale.payment_status.#{@sale.payment_status}") %>
              </span>
            </div>

            <!-- Total -->
            <div class="pt-4 border-t">
              <p class="text-sm text-gray-500 mb-1">Total de la venta</p>
              <p class="text-3xl font-bold text-green-600"><%= number_to_currency(@sale.total) %></p>
            </div>

            <!-- Si es a crédito, mostrar info adicional -->
            <% if @sale.payment_method == 'credit' %>
              <div class="pt-4 border-t space-y-2">
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-600">Pagado</span>
                  <span class="font-semibold text-green-600"><%= number_to_currency(@sale.paid_amount) %></span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-sm text-gray-600">Pendiente</span>
                  <span class="font-bold <%= @sale.pending_amount > 0 ? 'text-red-600' : 'text-green-600' %>">
                    <%= number_to_currency(@sale.pending_amount) %>
                  </span>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Notas -->
        <% if @sale.notes.present? %>
          <div class="bg-white rounded-xl shadow-md p-6">
            <h2 class="text-lg font-bold text-gray-800 mb-3 flex items-center gap-2">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
              </svg>
              Notas
            </h2>
            <p class="text-gray-700 text-sm"><%= @sale.notes %></p>
          </div>
        <% end %>

      </div>

      <!-- Columna derecha: Productos -->
      <div class="lg:col-span-2">
        
        <!-- Productos de la venta -->
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
          <div class="bg-gradient-to-r from-green-500 to-emerald-500 px-6 py-4">
            <h2 class="text-xl font-bold text-white flex items-center gap-2">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
              </svg>
              Productos
            </h2>
          </div>
          
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-gray-50 border-b">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Producto</th>
                  <th class="px-6 py-4 text-right text-xs font-medium text-gray-500 uppercase">Cantidad</th>
                  <th class="px-6 py-4 text-right text-xs font-medium text-gray-500 uppercase">Precio Unit.</th>
                  <th class="px-6 py-4 text-right text-xs font-medium text-gray-500 uppercase">Descuento</th>
                  <th class="px-6 py-4 text-right text-xs font-medium text-gray-500 uppercase">Subtotal</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% @sale.sale_items.each do |item| %>
                  <tr class="hover:bg-gray-50 transition">
                    <td class="px-6 py-4">
                      <div class="flex items-center gap-3">
                        <div>
                          <p class="font-semibold text-gray-900"><%= item.product.name %></p>
                          <% if item.product.barcodes.any? %>
                            <p class="text-xs text-gray-500">
                              Código: <%= item.product.barcodes.map(&:code).compact.reject(&:blank?).join(", ") %>
                            </p>
                          <% end %>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 text-right">
                      <span class="font-medium text-gray-900"><%= number_with_precision(item.quantity, precision: 2, strip_insignificant_zeros: true) %></span>
                    </td>
                    <td class="px-6 py-4 text-right">
                      <span class="text-gray-700"><%= number_to_currency(item.unit_price) %></span>
                    </td>
                    <td class="px-6 py-4 text-right">
                      <span class="<%= item.discount > 0 ? 'text-red-600 font-medium' : 'text-gray-400' %>">
                        <%= item.discount > 0 ? "-#{number_to_currency(item.discount)}" : "-" %>
                      </span>
                    </td>
                    <td class="px-6 py-4 text-right">
                      <span class="font-bold text-green-600"><%= number_to_currency(item.subtotal) %></span>
                    </td>
                  </tr>
                <% end %>
              </tbody>
              <tfoot class="bg-gray-50 border-t-2">
                <tr>
                  <td colspan="4" class="px-6 py-4 text-right">
                    <span class="text-lg font-bold text-gray-800">TOTAL:</span>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <span class="text-2xl font-bold text-green-600"><%= number_to_currency(@sale.total) %></span>
                  </td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>

      </div>
    </div>

    <!-- Sección de Estado de Pago (solo para ventas a crédito) -->
    <% if @sale.payment_method == 'credit' %>
      <div class="mt-6 bg-white rounded-xl shadow-md overflow-hidden">
        <div class="bg-gradient-to-r from-blue-500 to-indigo-500 px-6 py-4">
          <h2 class="text-xl font-bold text-white flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Estado de Pago a Crédito
          </h2>
        </div>
        
        <div class="p-6">
          <!-- Resumen de pago -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-blue-50 p-4 rounded-lg border-l-4 border-blue-500">
              <p class="text-sm text-blue-600 font-medium mb-1">Total de la venta</p>
              <p class="text-2xl font-bold text-blue-700"><%= number_to_currency(@sale.total) %></p>
            </div>
            
            <div class="bg-green-50 p-4 rounded-lg border-l-4 border-green-500">
              <p class="text-sm text-green-600 font-medium mb-1">Monto pagado</p>
              <p class="text-2xl font-bold text-green-700"><%= number_to_currency(@sale.paid_amount) %></p>
            </div>
            
            <div class="<%= @sale.pending_amount > 0 ? 'bg-red-50 border-l-4 border-red-500' : 'bg-gray-50 border-l-4 border-gray-300' %> p-4 rounded-lg">
              <p class="text-sm <%= @sale.pending_amount > 0 ? 'text-red-600' : 'text-gray-600' %> font-medium mb-1">
                Saldo pendiente
              </p>
              <p class="text-2xl font-bold <%= @sale.pending_amount > 0 ? 'text-red-700' : 'text-gray-700' %>">
                <%= number_to_currency(@sale.pending_amount) %>
              </p>
            </div>
          </div>

          <!-- Barra de progreso -->
          <div class="mb-6">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-600">Progreso de pago</span>
              <span class="text-sm font-bold text-gray-800">
                <%= @sale.total > 0 ? number_to_percentage((@sale.paid_amount / @sale.total * 100), precision: 0) : "0%" %>
              </span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <div class="<%= @sale.fully_paid? ? 'bg-green-500' : 'bg-yellow-500' %> h-3 rounded-full transition-all duration-300"
                   style="width: <%= @sale.total > 0 ? (@sale.paid_amount / @sale.total * 100) : 0 %>%"></div>
            </div>
          </div>

          <!-- Botón para registrar pago si hay saldo pendiente -->
          <% if @sale.has_pending_amount? && @sale.customer %>
            <div class="mb-6">
              <%= link_to new_customer_payment_path(@sale.customer, sale_id: @sale.id), 
                  class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-500 text-white font-bold rounded-lg hover:from-green-600 hover:to-emerald-600 transition shadow-md" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Registrar Pago
              <% end %>
            </div>
          <% elsif @sale.fully_paid? %>
            <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 rounded">
              <div class="flex items-center">
                <svg class="w-6 h-6 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <p class="font-bold text-green-700">¡Venta pagada completamente!</p>
              </div>
            </div>
          <% end %>

          <!-- Historial de pagos -->
          <% if @payments&.any? %>
            <div class="border-t pt-6">
              <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
                Historial de Pagos
              </h3>
              
              <div class="overflow-x-auto">
                <table class="w-full">
                  <thead class="bg-gray-50 border-b">
                    <tr>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Fecha</th>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Monto</th>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Método</th>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Notas</th>
                      <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">Registrado</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200">
                    <% @payments.each do |payment| %>
                      <tr class="hover:bg-gray-50 transition">
                        <td class="px-4 py-3 text-sm font-medium text-gray-900">
                          <%= l(payment.payment_date, format: :short) %>
                        </td>
                        <td class="px-4 py-3 text-sm font-bold text-green-600">
                          <%= number_to_currency(payment.amount) %>
                        </td>
                        <td class="px-4 py-3">
                          <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-700">
                            <%= payment.payment_method.titleize %>
                          </span>
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-600">
                          <%= payment.notes || "-" %>
                        </td>
                        <td class="px-4 py-3 text-xs text-gray-500">
                          <%= l(payment.created_at, format: :long) %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              
              <!-- Total de pagos -->
              <div class="mt-4 flex justify-end">
                <div class="bg-green-50 px-6 py-3 rounded-lg border-l-4 border-green-500">
                  <p class="text-sm text-green-600 font-medium mb-1">Total de pagos registrados</p>
                  <p class="text-xl font-bold text-green-700">
                    <%= number_to_currency(@payments.sum(:amount)) %>
                  </p>
                </div>
              </div>
            </div>
          <% elsif @sale.has_pending_amount? %>
            <div class="border-t pt-6">
              <div class="text-center py-8">
                <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <p class="text-gray-500 font-medium">No se han registrado pagos para esta venta</p>
                <p class="text-gray-400 text-sm mt-1">El saldo completo está pendiente de pago</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>