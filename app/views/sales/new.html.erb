<div class="min-h-screen bg-gray-50">
  <div class="container mx-auto px-3 py-3">
    
    <!-- Success Alert (Fixed position) - CON STIMULUS -->
    <% if @success_message %>
      <div class="fixed top-4 right-4 z-50"
           data-controller="success-alert"
           data-success-alert-duration-value="3000">
        <div class="bg-gradient-to-r from-green-500 to-green-600 text-white px-6 py-3 rounded-lg shadow-xl flex items-center gap-3 cursor-pointer"
             data-action="click->success-alert#dismiss">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="font-semibold"><%= @success_message %></span>
          <svg class="w-4 h-4 ml-2 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </div>
      </div>
    <% end %>

    <!-- Header compacto -->
    <div class="bg-gradient-to-r from-green-600 to-green-700 text-white px-4 py-2 rounded-lg shadow-md mb-3 flex items-center justify-between">
      <div class="flex items-center gap-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <h1 class="text-xl font-bold">Venta de Mostrador</h1>
      </div>
      <div class="text-xs">
        <%= Time.current.strftime("%d/%m/%Y %H:%M") %>
      </div>
    </div>

    <!-- ðŸ”¥ ALERTA DE SESIÃ“N ACTIVA -->
    <% if @current_session %>
      <div class="bg-green-50 border-l-4 border-green-500 p-3 rounded-lg shadow-sm mb-3">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="bg-green-500 rounded-full p-2">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-bold text-green-800">
                âœ… Turno activo: <span class="text-green-900"><%= @current_session.register.display_name %></span>
              </p>
              <p class="text-xs text-green-700">
                Abierto por <strong><%= @current_session.opened_by.name %></strong> hace <%= time_ago_in_words(@current_session.opened_at) %>
              </p>
            </div>
          </div>
          <%= link_to register_session_path(@current_session), class: "text-sm text-green-700 hover:text-green-900 font-semibold underline flex items-center gap-1" do %>
            <span>Ver turno</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        </div>
      </div>
    <% end %>

    <%= render 'form', sale: @sale %>
    
  </div>
</div>
