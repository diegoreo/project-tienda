<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto px-4 py-6"
     data-controller="table-columns table-filters"
     data-page="sales"
     data-action="click@window->table-columns#closeDropdown">
    
    <!-- Header -->
    <div class="bg-white rounded-lg shadow-md p-4 mb-4">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
        <div>
          <h1 class="text-2xl font-bold text-gray-800">Historial de Ventas</h1>
          <p class="text-sm text-gray-600 mt-1">
            <%= pluralize(@pagy.count, 'venta') %> encontrada<%= 's' if @pagy.count != 1 %>
          </p>
        </div>
        
        <div class="flex gap-3">

          <!-- Bot√≥n de filtros -->
          <button type="button"
                  data-action="click->table-filters#toggleFilters"
                  class="inline-flex items-center justify-center px-4 py-2.5 bg-gray-100 text-gray-700 text-sm font-semibold rounded-lg hover:bg-gray-200 transition">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
            </svg>
            <span data-table-filters-target="buttonText">üîç Filtros</span>
            <svg class="w-4 h-4 ml-1" data-table-filters-target="arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>

          <!-- Bot√≥n de columnas -->
          <div class="relative">
            <button type="button"
                    data-action="click->table-columns#toggleDropdown"
                    class="inline-flex items-center justify-center px-4 py-2.5 bg-gray-100 text-gray-700 text-sm font-semibold rounded-lg hover:bg-gray-200 transition">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
              </svg>
              ‚öôÔ∏è Columnas
            </button>
            
            <!-- Dropdown -->
            <div class="hidden absolute right-0 mt-2 w-64 bg-white rounded-lg shadow-xl border border-gray-200 z-50"
                 data-table-columns-target="dropdown">
              <div class="p-4">
                <div class="flex items-center justify-between mb-3">
                  <h3 class="text-sm font-bold text-gray-800">Columnas visibles</h3>
                  <button type="button"
                          data-action="click->table-columns#resetColumns"
                          class="text-xs text-blue-600 hover:text-blue-800">
                    Restablecer
                  </button>
                </div>
                
                <div class="space-y-2">
                  <!-- Folio (siempre visible) -->
                  <label class="flex items-center gap-2 cursor-not-allowed opacity-50">
                    <input type="checkbox" checked disabled class="rounded">
                    <span class="text-sm text-gray-600">Folio (requerido)</span>
                  </label>
                  
                  <!-- Fecha -->
                  <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-1 rounded">
                    <input type="checkbox"
                           checked
                           data-column="fecha"
                           data-table-columns-target="columnToggle"
                           data-action="change->table-columns#toggleColumn"
                           class="rounded text-green-600">
                    <span class="text-sm text-gray-700">Fecha</span>
                  </label>
                  
                  <!-- Cliente -->
                  <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-1 rounded">
                    <input type="checkbox"
                           checked
                           data-column="cliente"
                           data-table-columns-target="columnToggle"
                           data-action="change->table-columns#toggleColumn"
                           class="rounded text-green-600">
                    <span class="text-sm text-gray-700">Cliente</span>
                  </label>
                  
                  <!-- Vendedor -->
                  <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-1 rounded">
                    <input type="checkbox"
                           checked
                           data-column="vendedor"
                           data-table-columns-target="columnToggle"
                           data-action="change->table-columns#toggleColumn"
                           class="rounded text-green-600">
                    <span class="text-sm text-gray-700">Vendedor</span>
                  </label>
                  
                  <!-- Caja -->
                  <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-1 rounded">
                    <input type="checkbox"
                           checked
                           data-column="caja"
                           data-table-columns-target="columnToggle"
                           data-action="change->table-columns#toggleColumn"
                           class="rounded text-green-600">
                    <span class="text-sm text-gray-700">Caja</span>
                  </label>
                  
                  <!-- Almac√©n (oculto por defecto) -->
                  <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-1 rounded">
                    <input type="checkbox"
                           data-column="almacen"
                           data-table-columns-target="columnToggle"
                           data-action="change->table-columns#toggleColumn"
                           class="rounded text-green-600">
                    <span class="text-sm text-gray-700">Almac√©n</span>
                  </label>
                  
                  <!-- Total (siempre visible) -->
                  <label class="flex items-center gap-2 cursor-not-allowed opacity-50">
                    <input type="checkbox" checked disabled class="rounded">
                    <span class="text-sm text-gray-600">Total (requerido)</span>
                  </label>
                  
                  <!-- M√©todo -->
                  <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-1 rounded">
                    <input type="checkbox"
                           checked
                           data-column="metodo"
                           data-table-columns-target="columnToggle"
                           data-action="change->table-columns#toggleColumn"
                           class="rounded text-green-600">
                    <span class="text-sm text-gray-700">M√©todo pago</span>
                  </label>
                  
                  <!-- Estado pago -->
                  <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-1 rounded">
                    <input type="checkbox"
                           checked
                           data-column="pago"
                           data-table-columns-target="columnToggle"
                           data-action="change->table-columns#toggleColumn"
                           class="rounded text-green-600">
                    <span class="text-sm text-gray-700">Estado pago</span>
                  </label>
                  
                  <!-- Estado -->
                  <label class="flex items-center gap-2 cursor-pointer hover:bg-gray-50 p-1 rounded">
                    <input type="checkbox"
                           checked
                           data-column="estado"
                           data-table-columns-target="columnToggle"
                           data-action="change->table-columns#toggleColumn"
                           class="rounded text-green-600">
                    <span class="text-sm text-gray-700">Estado</span>
                  </label>
                  
                  <!-- Acciones (siempre visible) -->
                  <label class="flex items-center gap-2 cursor-not-allowed opacity-50">
                    <input type="checkbox" checked disabled class="rounded">
                    <span class="text-sm text-gray-600">Acciones (requerido)</span>
                  </label>
                </div>
              </div>
            </div>
          </div>


          <%= link_to new_sale_path, 
            data: { turbo_frame: "_top" },
            class: "inline-flex items-center justify-center px-5 py-2.5 bg-gradient-to-r from-green-600 to-green-700 text-white text-sm font-semibold rounded-lg shadow-lg hover:from-green-700 hover:to-green-800 transform hover:scale-105 transition duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Nueva Venta
          <% end %>
        </div>
      </div>
    </div>

    <!-- Filtros -->
    <div class="bg-white rounded-lg shadow-md p-4 mb-4"
         data-table-filters-target="filtersSection">
      <%= form_with url: sales_path, method: :get, local: true, class: "space-y-4" do |f| %>
        
        <!-- Fila 1: B√∫squeda r√°pida + Fechas -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <!-- B√∫squeda por folio -->
          <div>
            <%= f.label :folio, "Buscar por folio", class: "block text-xs font-semibold text-gray-700 mb-1" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
              <%= f.text_field :folio, 
                value: params[:folio],
                placeholder: "Ej: 123",
                class: "w-full pl-10 pr-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
            </div>
          </div>

          <!-- Fecha desde -->
          <div>
            <%= f.label :date_from, "Desde", class: "block text-xs font-semibold text-gray-700 mb-1" %>
            <%= f.date_field :date_from, 
              value: params[:date_from],
              class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
          </div>

          <!-- Fecha hasta -->
          <div>
            <%= f.label :date_to, "Hasta", class: "block text-xs font-semibold text-gray-700 mb-1" %>
            <%= f.date_field :date_to, 
              value: params[:date_to],
              class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
          </div>
        </div>

        <!-- Fila 2: Selects de filtros -->
        <div class="grid grid-cols-1 md:grid-cols-4 lg:grid-cols-7 gap-4">
          <!-- Cliente -->
          <div>
            <%= f.label :customer_id, "Cliente", class: "block text-xs font-semibold text-gray-700 mb-1" %>
            <%= f.collection_select :customer_id,
              Customer.order(:name),
              :id,
              :name,
              { include_blank: "Todos" },
              { 
                selected: params[:customer_id],
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white"
              } %>
          </div>

          <!-- Almac√©n -->
          <div>
            <%= f.label :warehouse_id, "Almac√©n", class: "block text-xs font-semibold text-gray-700 mb-1" %>
            <%= f.collection_select :warehouse_id,
              Warehouse.all,
              :id,
              :name,
              { include_blank: "Todos" },
              { 
                selected: params[:warehouse_id],
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white"
              } %>
          </div>

          <!-- Vendedor -->
          <div>
            <%= f.label :user_id, "Vendedor", class: "block text-xs font-semibold text-gray-700 mb-1" %>
            <%= f.collection_select :user_id,
              @users_for_filter,
              :id,
              :name,
              { include_blank: "Todos" },
              { 
                selected: params[:user_id],
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white"
              } %>
          </div>

          <!-- Caja -->
          <div>
            <%= f.label :register_id, "Caja", class: "block text-xs font-semibold text-gray-700 mb-1" %>
            <%= f.collection_select :register_id,
              @registers_for_filter,
              :id,
              :display_name,
              { include_blank: "Todas" },
              { 
                selected: params[:register_id],
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white"
              } %>
          </div>

          <!-- M√©todo de pago -->
          <div>
            <%= f.label :payment_method, "M√©todo pago", class: "block text-xs font-semibold text-gray-700 mb-1" %>
            <%= f.select :payment_method,
              options_for_select([
                ['Todos', ''],
                ['üíµ Efectivo', 'cash'],
                ['üí≥ Tarjeta', 'card'],
                ['üìù Cr√©dito', 'credit'],
                ['üîÄ Mixto', 'mixed']
              ], params[:payment_method]),
              {},
              class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white" %>
          </div>

          <!-- Estado de pago -->
          <div>
            <%= f.label :payment_status, "Estado pago", class: "block text-xs font-semibold text-gray-700 mb-1" %>
            <%= f.select :payment_status,
              options_for_select([
                ['Todos', ''],
                ['Pagado', 'paid'],
                ['Parcial', 'partial'],
                ['Pendiente', 'pending']
              ], params[:payment_status]),
              {},
              class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white" %>
          </div>

          <!-- Estado venta -->
          <div>
            <%= f.label :status, "Estado", class: "block text-xs font-semibold text-gray-700 mb-1" %>
            <%= f.select :status,
              options_for_select([
                ['Todas', ''],
                ['Completadas', 'completed'],
                ['Canceladas', 'cancelled']
              ], params[:status]),
              {},
              class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent bg-white" %>
          </div>
        </div>

        <!-- Botones -->
        <div class="flex gap-3">
          <%= f.submit "üîç Buscar", class: "px-4 py-2 bg-gradient-to-r from-green-600 to-green-700 text-white text-sm font-semibold rounded-lg hover:from-green-700 hover:to-green-800 transition" %>
          <%= link_to "Limpiar filtros", sales_path, class: "px-4 py-2 bg-gray-200 text-gray-700 text-sm font-semibold rounded-lg hover:bg-gray-300 transition" %>
        </div>
      <% end %>
    </div>

    <!-- Tabla de ventas -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <% if @sales.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">

            <thead class="bg-gray-700">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-bold text-white uppercase tracking-wider"
                    data-table-columns-target="column"
                    data-column="folio">Folio</th>
                
                <th class="px-4 py-3 text-left text-xs font-bold text-white uppercase tracking-wider"
                    data-table-columns-target="column"
                    data-column="fecha">Fecha</th>
                
                <th class="px-4 py-3 text-left text-xs font-bold text-white uppercase tracking-wider"
                    data-table-columns-target="column"
                    data-column="cliente">Cliente</th>
                
                <th class="px-4 py-3 text-left text-xs font-bold text-white uppercase tracking-wider"
                    data-table-columns-target="column"
                    data-column="vendedor">Vendedor</th>
                
                <th class="px-4 py-3 text-left text-xs font-bold text-white uppercase tracking-wider"
                    data-table-columns-target="column"
                    data-column="caja">Caja</th>
                
                <!-- Almac√©n (oculto por defecto) -->
                <th class="px-4 py-3 text-left text-xs font-bold text-white uppercase tracking-wider hidden"
                    data-table-columns-target="column"
                    data-column="almacen">Almac√©n</th>
                
                <th class="px-4 py-3 text-left text-xs font-bold text-white uppercase tracking-wider"
                    data-table-columns-target="column"
                    data-column="total">Total</th>
                
                <th class="px-4 py-3 text-left text-xs font-bold text-white uppercase tracking-wider"
                    data-table-columns-target="column"
                    data-column="metodo">M√©todo</th>
                
                <th class="px-4 py-3 text-left text-xs font-bold text-white uppercase tracking-wider"
                    data-table-columns-target="column"
                    data-column="pago">Pago</th>
                
                <th class="px-4 py-3 text-left text-xs font-bold text-white uppercase tracking-wider"
                    data-table-columns-target="column"
                    data-column="estado">Estado</th>
                
                <th class="px-4 py-3 text-center text-xs font-bold text-white uppercase tracking-wider"
                    data-table-columns-target="column"
                    data-column="acciones">Acciones</th>
              </tr>
            </thead>

            <tbody class="bg-white divide-y divide-gray-200">
              <% @sales.each do |sale| %>
                <tr class="hover:bg-gray-50 transition <%= 'bg-red-50' if sale.cancelled? %>">
                  <!-- Folio -->
                  <td class="px-4 py-2"
                      data-table-columns-target="column"
                      data-column="folio">
                    <span class="text-sm font-bold text-gray-800">#<%= sale.id %></span>
                  </td>

                  <!-- Fecha -->
                  <td class="px-4 py-2 text-sm text-gray-700"
                      data-table-columns-target="column"
                      data-column="fecha">
                    <%= sale.sale_date.strftime("%d/%m/%Y") %>
                    <div class="text-xs text-gray-500"><%= sale.created_at.strftime("%H:%M") %></div>
                  </td>

                  <!-- Cliente -->
                  <td class="px-4 py-2 text-sm text-gray-700"
                      data-table-columns-target="column"
                      data-column="cliente">
                    <%= sale.customer&.name || 'P√∫blico General' %>
                  </td>

                  <!-- Vendedor -->
                  <td class="px-4 py-2 text-sm text-gray-700"
                      data-table-columns-target="column"
                      data-column="vendedor">
                    <%= sale.user&.name || 'Sin registro' %>
                  </td>

                  <!-- Caja -->
                  <td class="px-4 py-2 text-sm text-gray-700"
                      data-table-columns-target="column"
                      data-column="caja">
                    <%= sale.register_session&.register&.name || 'N/A' %>
                  </td>

                  <!-- Almac√©n (oculto por defecto) -->
                  <td class="px-4 py-2 text-sm text-gray-700 hidden"
                      data-table-columns-target="column"
                      data-column="almacen">
                    <%= sale.warehouse.name %>
                  </td>

                  <!-- Total -->
                  <td class="px-4 py-2"
                      data-table-columns-target="column"
                      data-column="total">
                    <span class="text-sm font-bold text-green-700">
                      <%= number_to_currency(sale.total) %>
                    </span>
                  </td>

                  <!-- M√©todo de pago -->
                  <td class="px-4 py-2"
                      data-table-columns-target="column"
                      data-column="metodo">
                    <% 
                      payment_colors = {
                        'cash' => 'bg-green-100 text-green-800',
                        'card' => 'bg-blue-100 text-blue-800',
                        'credit' => 'bg-yellow-100 text-yellow-800',
                        'mixed' => 'bg-purple-100 text-purple-800'
                      }
                      payment_icons = {
                        'cash' => 'üíµ',
                        'card' => 'üí≥',
                        'credit' => 'üìù',
                        'mixed' => 'üîÄ'
                      }
                    %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold <%= payment_colors[sale.payment_method] %>">
                      <%= payment_icons[sale.payment_method] %> <%= sale.payment_method.humanize %>
                    </span>
                  </td>

                  <!-- Estado de pago -->
                  <td class="px-4 py-2"
                      data-table-columns-target="column"
                      data-column="pago">
                    <% 
                      status_colors = {
                        'paid' => 'bg-green-100 text-green-800',
                        'partial' => 'bg-yellow-100 text-yellow-800',
                        'pending' => 'bg-red-100 text-red-800'
                      }
                    %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold <%= status_colors[sale.payment_status] %>">
                      <%= sale.payment_status.humanize %>
                    </span>
                  </td>

                  <!-- Estado -->
                  <td class="px-4 py-2"
                      data-table-columns-target="column"
                      data-column="estado">
                    <% if sale.completed? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                        ‚úì Completada
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-red-100 text-red-800">
                        ‚úï Cancelada
                      </span>
                    <% end %>
                  </td>

                  <!-- Acciones -->
                  <td class="px-4 py-2"
                      data-table-columns-target="column"
                      data-column="acciones">
                    <div class="flex items-center justify-center gap-2">
                      <%= link_to sale_path(sale),
                        data: { turbo_frame: "_top" },
                        class: "inline-flex items-center px-3 py-1.5 bg-blue-100 text-blue-700 text-xs font-semibold rounded-lg hover:bg-blue-200 transition" do %>
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        Ver
                      <% end %>

                      <% if sale.can_be_cancelled? %>
                        <%= link_to cancel_sale_path(sale),
                          data: { 
                            turbo_method: :post, 
                            turbo_confirm: "¬øCancelar venta ##{sale.id} por #{number_to_currency(sale.total)}?" 
                          },
                          class: "inline-flex items-center px-3 py-1.5 bg-red-100 text-red-700 text-xs font-semibold rounded-lg hover:bg-red-200 transition" do %>
                          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                          </svg>
                          Cancelar
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <!-- Estado vac√≠o -->
        <div class="text-center py-12 px-4">
          <svg class="w-24 h-24 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <h3 class="text-xl font-semibold text-gray-700 mb-2">No se encontraron ventas</h3>
          <p class="text-gray-500 mb-6">Intenta ajustar los filtros o realiza una nueva venta</p>
          <%= link_to new_sale_path, 
            data: { turbo_frame: "_top" },
