<%= form_with model: sale, local: true, data: { controller: "sale-items" } do |f| %>
  <div class="form-container">
    <% if sale.errors.any? %>
      <div class="error-container">
        <h4><%= pluralize(sale.errors.count, "error") %>:</h4>
        <ul>
          <% sale.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-row">
      <div class="form-group">
        <%= f.label :customer_id, "Cliente", class: "form-label" %>
        <%= f.collection_select :customer_id, 
          Customer.order(:name), 
          :id, 
          :name, 
          { selected: Customer.find_by(name: "Público General")&.id }, 
          class: "form-input",
          data: { action: "change->sale-items#checkCreditLimit" } %>
        <small class="field-hint">Cliente seleccionado por defecto: Público General</small>
    </div>

      <div class="form-group">
        <%= f.label :warehouse_id, "Almacén *", class: "form-label" %>
        <%= f.collection_select :warehouse_id, 
          Warehouse.all, 
          :id, 
          :name, 
          { prompt: "Selecciona almacén" }, 
          { class: "form-input", required: true } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :payment_method, "Método de pago *", class: "form-label" %>
      <%= f.select :payment_method,
        [
          ['Efectivo', 'cash'],
          ['Tarjeta', 'card'],
          ['Crédito', 'credit'],
          ['Mixto', 'mixed']
        ],
        {},
        { class: "form-input", required: true, data: { action: "change->sale-items#checkPaymentMethod" } } %>
    </div>

    <h3>Productos</h3>
    <div class="items-section">
      <table class="items-table">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unit.</th>
            <th>Descuento</th>
            <th>Subtotal</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody data-sale-items-target="items">
          <%= f.fields_for :sale_items do |item_fields| %>
            <%= render "sale_item_fields", f: item_fields %>
          <% end %>
        </tbody>
      </table>

      <template id="sale-item-template">
        <%= f.fields_for :sale_items, SaleItem.new, child_index: "NEW_RECORD" do |item_fields| %>
          <%= render "sale_item_fields", f: item_fields %>
        <% end %>
      </template>

      <div style="margin: 1rem 0;">
        <button type="button" data-action="sale-items#addItem" class="btn-add">
          ➕ Agregar producto
        </button>
      </div>
    </div>

    <div class="total-section">
      <h3>Total: <span id="sale-total">$0.00</span></h3>
    </div>

    <div class="form-group">
      <%= f.label :notes, "Notas", class: "form-label" %>
      <%= f.text_area :notes, class: "form-textarea", rows: 3 %>
    </div>

    <div class="actions-container">
      <%= f.submit "Registrar Venta", class: "btn-primary" %>
      <%= link_to "Cancelar", sales_path, class: "btn-secondary" %>
    </div>
  </div>
<% end %>

<style>
  .form-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 30px;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #2c3e50;
  }

  .form-input, .form-textarea {
    width: 100%;
    padding: 12px;
    border: 2px solid #e1e5e9;
    border-radius: 8px;
    font-size: 16px;
    box-sizing: border-box;
  }

  .form-input:focus, .form-textarea:focus {
    outline: none;
    border-color: #3498db;
    box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
  }

  .field-hint {
    display: block;
    margin-top: 5px;
    font-size: 14px;
    color: #7f8c8d;
    font-style: italic;
  }

  .items-section {
    margin: 2rem 0;
  }

  .items-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1rem;
  }

  .items-table th {
    background: #34495e;
    color: white;
    padding: 0.75rem;
    text-align: left;
  }

  .items-table td {
    padding: 0.75rem;
    border-bottom: 1px solid #ecf0f1;
  }

  .total-section {
    text-align: right;
    padding: 1.5rem;
    background: #ecf0f1;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .total-section h3 {
    margin: 0;
    color: #2c3e50;
    font-size: 1.5rem;
  }

  .actions-container {
    display: flex;
    gap: 15px;
    justify-content: center;
    margin-top: 30px;
  }

  .btn-primary, .btn-secondary, .btn-add {
    padding: 14px 30px;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
  }

  .btn-primary {
    background: linear-gradient(135deg, #27ae60, #229954);
    color: white;
  }

  .btn-secondary {
    background: linear-gradient(135deg, #95a5a6, #7f8c8d);
    color: white;
  }

  .btn-add {
    background: linear-gradient(135deg, #3498db, #2980b9);
    color: white;
  }

  .error-container {
    background: linear-gradient(135deg, #ff6b6b, #ee5a52);
    color: white;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 25px;
  }
</style>