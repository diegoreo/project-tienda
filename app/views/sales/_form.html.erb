<%= form_with model: sale, local: true, data: { controller: "pos-sale" } do |f| %>
  <div class="pos-container">
    <% if sale.errors.any? %>
      <div class="error-container">
        <h4><%= pluralize(sale.errors.count, "error") %>:</h4>
        <ul>
          <% sale.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Configuraci√≥n de venta -->
    <div class="sale-config">
      <div class="config-row">
        <div class="config-item">
          <%= f.label :customer_id, "Cliente", class: "config-label" %>
          <%= f.collection_select :customer_id, 
            Customer.order(:name), 
            :id, 
            :name, 
            { selected: Customer.find_by(name: "P√∫blico General")&.id }, 
            class: "config-input" %>
        </div>

        <div class="config-item">
          <%= f.label :warehouse_id, "Almac√©n", class: "config-label" %>
          <%= f.collection_select :warehouse_id, 
            Warehouse.all, 
            :id, 
            :name, 
            {}, 
            { 
              class: "config-input", 
              required: true,
              data: { 
                action: "change->pos-sale#saveWarehousePreference",
                'pos-sale-target': 'warehouseSelect'
              }
            } %>
        </div>

        <div class="config-item">
          <%= f.label :payment_method, "M√©todo de pago", class: "config-label" %>
          <%= f.select :payment_method,
            [
              ['Efectivo', 'cash'],
              ['Tarjeta', 'card'],
              ['Cr√©dito', 'credit'],
              ['Mixto', 'mixed']
            ],
            { selected: 'cash' },
            { 
              class: "config-input", 
              required: true,
              data: { action: "change->pos-sale#handlePaymentMethodChange" }
            } %>
        </div>
      </div>
    </div>

    <!-- Buscador de productos -->
    <div class="product-search-section">
      <div class="search-container">
        <input 
          type="text" 
          placeholder="üîç Escanea c√≥digo de barras o busca por nombre del producto..."
          class="product-search-input"
          data-pos-sale-target="searchInput"
          data-action="input->pos-sale#searchProducts keydown->pos-sale#handleSearchKeydown"
          autocomplete="off"
        >
        <div class="search-results" data-pos-sale-target="searchResults"></div>
      </div>
    </div>

    <!-- Lista de productos en la venta -->
    <div class="sale-items-section">
      <table class="sale-items-table">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Disponible</th>
            <th>Cantidad</th>
            <th>Precio Unit.</th>
            <th>Descuento</th>
            <th>Subtotal</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody data-pos-sale-target="itemsContainer">
          <%= f.fields_for :sale_items do |item_fields| %>
            <%= render "sale_item_row", f: item_fields %>
          <% end %>
        </tbody>
      </table>
      
      <div class="empty-cart" data-pos-sale-target="emptyCart">
        <p>üõí No hay productos agregados</p>
        <p class="empty-hint">Escanea o busca productos para comenzar</p>
      </div>
    </div>

    <!-- Total y acciones -->
    <div class="sale-footer">
      <div class="notes-section">
        <button 
          type="button" 
          class="btn-toggle-notes"
          data-action="click->pos-sale#toggleNotes"
        >
          üìù Agregar nota
        </button>
        <div class="notes-container" data-pos-sale-target="notesContainer" style="display: none;">
          <%= f.text_area :notes, class: "notes-textarea", rows: 2, placeholder: "Notas sobre esta venta..." %>
        </div>
      </div>

      <div class="total-section">
        <div class="total-row">
          <span class="total-label">TOTAL:</span>
          <span class="total-amount" data-pos-sale-target="totalAmount">$0.00</span>
        </div>
      </div>

      <div class="payment-section" data-pos-sale-target="paymentSection" style="display: none;">
        <h3>Pago en Efectivo</h3>
        <div class="payment-row">
          <label>Recibido:</label>
          <input 
            type="number" 
            step="0.01" 
            min="0"
            placeholder="0.00"
            class="payment-input"
            data-pos-sale-target="receivedAmount"
            data-action="input->pos-sale#calculateChange"
          >
        </div>
        <div class="change-display">
          <span class="change-label">Cambio:</span>
          <span class="change-amount" data-pos-sale-target="changeAmount">$0.00</span>
        </div>
      </div>

      <div class="action-buttons">
        <%= f.submit "Registrar Venta (Enter)", class: "btn-complete-sale", data: { 'pos-sale-target': 'submitButton' } %>
        <button type="button" class="btn-cancel" data-action="click->pos-sale#clearSale">
          Cancelar (Esc)
        </button>
      </div>
    </div>
    <!-- Leyenda de atajos -->
    <div class="shortcuts-legend">
      <h4>‚å®Ô∏è Atajos de teclado</h4>
      <div class="shortcuts-grid">
        <div class="shortcut-item">
          <kbd>F1</kbd>
          <span>Buscar producto</span>
        </div>
        <div class="shortcut-item">
          <kbd>F2</kbd>
          <span>Cambiar pago</span>
        </div>
        <div class="shortcut-item">
          <kbd>F3</kbd>
          <span>Campo recibido</span>
        </div>
        <div class="shortcut-item">
          <kbd>Enter</kbd>
          <span>Completar venta</span>
        </div>
        <div class="shortcut-item">
          <kbd>Esc</kbd>
          <span>Cancelar</span>
        </div>
        <div class="shortcut-item">
          <kbd>‚Üë ‚Üì</kbd>
          <span>Navegar resultados</span>
        </div>
      </div>
    </div>

    <style>
      .shortcuts-legend {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 8px;
        margin-top: 1rem;
        border: 1px solid #dee2e6;
      }
  
      .shortcuts-legend h4 {
        margin: 0 0 1rem 0;
        color: #495057;
        font-size: 0.9rem;
      }
  
      .shortcuts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 0.75rem;
      }
  
      .shortcut-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
  
      .shortcut-item kbd {
        background: white;
        border: 1px solid #adb5bd;
        border-radius: 4px;
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
        font-weight: 600;
        color: #495057;
        box-shadow: 0 2px 0 #adb5bd;
        min-width: 40px;
        text-align: center;
      }
  
      .shortcut-item span {
        font-size: 0.85rem;
        color: #6c757d;
      }
    </style>
  </div>
<% end %>

