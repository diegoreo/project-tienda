<div class="bg-gray-50 min-h-screen">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    
    <!-- Breadcrumb -->
    <nav class="flex mb-4" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <%= link_to inventories_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" do %>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
            </svg>
            Inventarios
          <% end %>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <%= link_to inventory_path(inventory), class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" do %>
              <%= inventory.product.name %>
            <% end %>
          </div>
        </li>
        <li aria-current="page">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">
              <%= @adjustment.new_record? ? "Nuevo Ajuste" : "Editar Ajuste" %>
            </span>
          </div>
        </li>
      </ol>
    </nav>

    <%= form_with(model: [inventory, @adjustment], local: true, data: { controller: "inventory-adjustment" }, class: "space-y-4") do |form| %>
      
      <!-- Encabezado del formulario -->
      <div class="bg-gradient-to-r from-orange-600 to-orange-700 text-white px-4 py-3 rounded-lg shadow-md">
        <h2 class="text-xl font-bold">
          <%= @adjustment.new_record? ? "Nuevo Ajuste de Inventario" : "Editar Ajuste" %>
        </h2>
        <p class="text-orange-100 text-xs mt-1">
          Registra entradas o salidas de stock para <%= inventory.product.name %>
        </p>
      </div>

      <!-- Mensajes de error -->
      <% if @adjustment.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-red-500 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div class="flex-1">
              <h4 class="text-red-800 font-semibold mb-2">
                <%= pluralize(@adjustment.errors.count, "error") %> impidieron guardar el ajuste:
              </h4>
              <ul class="list-disc list-inside text-red-700 space-y-1">
                <% @adjustment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Informaci贸n del Producto -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
        <h3 class="text-base font-semibold text-gray-800 mb-3 flex items-center">
          <svg class="w-4 h-4 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
          Informaci贸n del Producto
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Producto</label>
            <p class="text-sm font-semibold text-gray-800"><%= inventory.product.name %></p>
          </div>
          
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Almac茅n</label>
            <p class="text-sm font-semibold text-gray-800"><%= inventory.warehouse.name %></p>
          </div>
          
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Unidad</label>
            <p class="text-sm font-semibold text-gray-800"><%= inventory.product.sale_unit.name %></p>
          </div>
        </div>
      </div>

      <!-- Detalles del Ajuste -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
        <h3 class="text-base font-semibold text-gray-800 mb-3 flex items-center">
          <svg class="w-4 h-4 mr-2 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Detalles del Ajuste
        </h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Tipo de ajuste -->
          <div>
            <%= form.label :adjustment_type, "Tipo de Ajuste", class: "block text-xs font-medium text-gray-700 mb-1.5" %>
            <%= form.select :adjustment_type, 
                [[" Entrada (Aumentar stock)", "increase"], [" Salida (Disminuir stock)", "decrease"]], 
                {}, 
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition duration-200 bg-white",
                data: { action: "change->inventory-adjustment#recalculate" } %>
          </div>

          <!-- Cantidad -->
          <div>
            <%= form.label :quantity, "Cantidad", class: "block text-xs font-medium text-gray-700 mb-1.5" %>
            <%= form.number_field :quantity, 
                step: 0.001, 
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition duration-200",
                placeholder: "Ej. 10",
                data: { 
                  inventory_adjustment_target: "quantityInput", 
                  action: "input->inventory-adjustment#recalculate" 
                } %>
            <p class="mt-1 text-xs text-gray-500">
              En <%= inventory.product.sale_unit.name %>
            </p>
          </div>

          <!-- Motivo -->
          <div class="md:col-span-2">
            <%= form.label :reason, "Motivo del Ajuste", class: "block text-xs font-medium text-gray-700 mb-1.5" %>
            <%= form.text_field :reason, 
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition duration-200",
                placeholder: "Ej. Recepci贸n de mercanc铆a, Devoluci贸n, Merma, etc." %>
          </div>

          <!-- Realizado por -->
          <div>
            <%= form.label :performed_by, "Realizado por", class: "block text-xs font-medium text-gray-700 mb-1.5" %>
            <%= form.text_field :performed_by, 
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition duration-200",
                placeholder: "Nombre del responsable" %>
          </div>

          <!-- Fecha (opcional, si quieres agregar) -->
          <div class="flex items-center text-gray-500">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span class="text-xs">
              Fecha: <%= Time.current.strftime("%d/%m/%Y %H:%M") %>
            </span>
          </div>

          <!-- Nota -->
          <div class="md:col-span-2">
            <%= form.label :note, "Nota (Opcional)", class: "block text-xs font-medium text-gray-700 mb-1.5" %>
            <%= form.text_area :note, 
                class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent transition duration-200",
                rows: 2,
                placeholder: "Informaci贸n adicional sobre el ajuste..." %>
          </div>
        </div>

      </div>

      <!-- Visualizaci贸n Compacta del Ajuste -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
        <h3 class="text-base font-semibold text-gray-800 mb-3 flex items-center">
          <svg class="w-4 h-4 mr-2 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
          Vista Previa del Ajuste
        </h3>

        <div class="flex items-center justify-center gap-3">
          <!-- Stock Actual -->
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 text-center flex-1">
            <label class="block text-xs font-medium text-blue-700 mb-1">Stock Actual</label>
            <div class="text-2xl font-bold text-blue-600" data-inventory-adjustment-target="currentQuantity">
              <%= number_with_delimiter(inventory.quantity.to_i) %>
            </div>
            <p class="text-xs text-blue-600"><%= inventory.product.sale_unit.abbreviation %></p>
          </div>

          <!-- Flecha -->
          <div class="flex-shrink-0">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </div>

          <!-- Stock Final -->
          <div class="bg-purple-50 border border-purple-200 rounded-lg p-3 text-center flex-1">
            <label class="block text-xs font-medium text-purple-700 mb-1">Stock Resultante</label>
            <div class="text-2xl font-bold text-purple-600" data-inventory-adjustment-target="finalQuantity">
              <%= number_with_delimiter(inventory.quantity.to_i) %>
            </div>
            <p class="text-xs text-purple-600"><%= inventory.product.sale_unit.abbreviation %></p>
          </div>
        </div>

        <!-- Info compacta -->
        <div class="mt-3 bg-orange-50 border border-orange-200 rounded-lg p-3">
          <div class="flex items-start">
            <svg class="w-4 h-4 text-orange-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-xs text-orange-800">
              Este ajuste modificar谩 el stock de <strong><%= inventory.product.name %></strong> en <strong><%= inventory.warehouse.name %></strong>
            </p>
          </div>
        </div>
      </div>

      <!-- Botones de acci贸n -->
      <div class="flex flex-col sm:flex-row gap-3 pt-2">
        <%= form.submit @adjustment.new_record? ? "Guardar Ajuste" : "Actualizar Ajuste", 
            class: "flex-1 sm:flex-none inline-flex justify-center items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 shadow-md hover:shadow-lg transition duration-200" %>
        
        <%= link_to "Cancelar", 
            inventory_path(inventory), 
            class: "flex-1 sm:flex-none inline-flex justify-center items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition duration-200" %>
      </div>

    <% end %>

  </div>
</div>