<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto px-4 py-6">
    
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <%= link_to inventories_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" do %>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
            </svg>
            Inventarios
          <% end %>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <%= link_to inventory_path(@inventory), class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" do %>
              Detalle #<%= @inventory.id %>
            <% end %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <%= link_to inventory_inventory_adjustments_path(@inventory), class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" do %>
              Historial
            <% end %>
          </div>
        </li>
        <li aria-current="page">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Ajuste #<%= @adjustment.id %></span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Header -->
    <div class="<%= @adjustment.increase? ? 'bg-gradient-to-r from-green-600 to-green-700' : 'bg-gradient-to-r from-red-600 to-red-700' %> text-white rounded-lg shadow-md p-6 mb-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <div class="flex items-center mb-2">
            <% if @adjustment.increase? %>
              <svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m0 0l-4-4m4 4l4-4"/>
              </svg>
            <% else %>
              <svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 20V4m0 0l4 4m-4-4l-4 4"/>
              </svg>
            <% end %>
            <h1 class="text-3xl font-bold">
              <%= @adjustment.increase? ? 'Entrada' : 'Salida' %> de Inventario
            </h1>
          </div>
          <p class="text-white text-opacity-90">Registro #<%= @adjustment.id %></p>
        </div>

        <div class="text-right">
          <div class="text-5xl font-bold">
            <%= @adjustment.increase? ? '+' : '-' %><%= number_with_delimiter(@adjustment.quantity.to_i) %>
          </div>
          <div class="text-xl opacity-90">
            <%= @inventory.product.sale_unit.abbreviation %>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      
      <!-- Columna Principal -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Información del Ajuste -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-gradient-to-r from-gray-700 to-gray-800 px-6 py-4">
            <h2 class="text-xl font-bold text-white flex items-center">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
              Detalles del Ajuste
            </h2>
          </div>
          
          <div class="p-6">
            <dl class="grid grid-cols-1 gap-6">
              <!-- ID -->
              <div class="border-b border-gray-200 pb-4">
                <dt class="text-sm font-medium text-gray-500 mb-2">ID del Ajuste</dt>
                <dd class="text-2xl font-bold text-gray-800">#<%= @adjustment.id %></dd>
              </div>

              <!-- Tipo de Ajuste -->
              <div class="border-b border-gray-200 pb-4">
                <dt class="text-sm font-medium text-gray-500 mb-2">Tipo de Movimiento</dt>
                <dd>
                  <% if @adjustment.increase? %>
                    <span class="inline-flex items-center px-4 py-2 rounded-lg text-base font-semibold bg-green-100 text-green-800">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m0 0l-4-4m4 4l4-4"/>
                      </svg>
                      Entrada de Inventario
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-4 py-2 rounded-lg text-base font-semibold bg-red-100 text-red-800">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 20V4m0 0l4 4m-4-4l-4 4"/>
                      </svg>
                      Salida de Inventario
                    </span>
                  <% end %>
                </dd>
              </div>

              <!-- Cantidad -->
              <div class="border-b border-gray-200 pb-4">
                <dt class="text-sm font-medium text-gray-500 mb-2">Cantidad Ajustada</dt>
                <dd class="text-4xl font-bold <%= @adjustment.increase? ? 'text-green-600' : 'text-red-600' %>">
                  <%= @adjustment.increase? ? '+' : '-' %><%= number_with_delimiter(@adjustment.quantity.to_i) %>
                  <span class="text-lg text-gray-500 ml-2"><%= @inventory.product.sale_unit.abbreviation %></span>
                </dd>
              </div>

              <!-- Motivo -->
              <div class="border-b border-gray-200 pb-4">
                <dt class="text-sm font-medium text-gray-500 mb-2">Motivo del Ajuste</dt>
                <dd class="text-lg font-semibold text-gray-800"><%= @adjustment.reason %></dd>
              </div>

              <!-- Nota -->
              <div class="border-b border-gray-200 pb-4">
                <dt class="text-sm font-medium text-gray-500 mb-2">Notas Adicionales</dt>
                <dd class="text-base text-gray-800">
                  <% if @adjustment.note.present? %>
                    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                      <%= simple_format(@adjustment.note) %>
                    </div>
                  <% else %>
                    <span class="text-gray-400 italic">Sin notas adicionales</span>
                  <% end %>
                </dd>
              </div>

              <!-- Realizado por -->
              <div class="border-b border-gray-200 pb-4">
                <dt class="text-sm font-medium text-gray-500 mb-2">Realizado por</dt>
                <dd class="flex items-center">
                  <div class="flex-shrink-0 h-12 w-12 bg-gray-200 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                  </div>
                  <div class="ml-4">
                    <div class="text-lg font-semibold text-gray-900"><%= @adjustment.performed_by.name %></div>
                    <div class="text-sm text-gray-500">Usuario del sistema</div>
                  </div>
                </dd>
              </div>

              <!-- Fecha y Hora -->
              <div>
                <dt class="text-sm font-medium text-gray-500 mb-2">Fecha y Hora del Ajuste</dt>
                <dd class="flex items-center text-lg text-gray-800">
                  <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  <span class="font-semibold"><%= @adjustment.created_at.strftime("%d de %B de %Y") %></span>
                  <span class="mx-2 text-gray-400">•</span>
                  <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span class="font-semibold"><%= @adjustment.created_at.strftime("%H:%M:%S") %></span>
                </dd>
              </div>
            </dl>
          </div>
        </div>

      </div>

      <!-- Columna Lateral -->
      <div class="space-y-6">
        
        <!-- Información del Inventario -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
            <h2 class="text-lg font-bold text-white flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
              </svg>
              Inventario Relacionado
            </h2>
          </div>
          
          <div class="p-6 space-y-4">
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Producto</label>
              <p class="text-base font-semibold text-gray-800"><%= @inventory.product.name %></p>
            </div>

            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Almacén</label>
              <p class="text-base font-semibold text-gray-800"><%= @inventory.warehouse.name %></p>
            </div>

            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Stock Actual</label>
              <%
                display_quantity = if @inventory.product.presentation?
                  @inventory.product.available_stock(@inventory.warehouse)
                else
                  @inventory.quantity
                end
              %>
              <p class="text-3xl font-bold text-purple-600">
                <%= number_with_delimiter(display_quantity.to_i) %>
                <span class="text-sm text-gray-500"><%= @inventory.product.sale_unit.abbreviation %></span>
              </p>
            </div>

            <%= link_to inventory_path(@inventory), 
                class: "block w-full text-center px-4 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition" do %>
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              Ver Detalle del Inventario
            <% end %>
          </div>
        </div>

        <!-- Acciones Rápidas -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Navegación
          </h3>
          
          <div class="space-y-3">
            <%= link_to new_inventory_inventory_adjustment_path(@inventory), 
                class: "block w-full text-center px-4 py-3 bg-orange-600 text-white font-semibold rounded-lg hover:bg-orange-700 transition" do %>
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              Nuevo Ajuste
            <% end %>
            
            <%= link_to inventory_inventory_adjustments_path(@inventory), 
                class: "block w-full text-center px-4 py-3 bg-gray-600 text-white font-semibold rounded-lg hover:bg-gray-700 transition" do %>
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Ver Historial Completo
            <% end %>
            
            <%= link_to inventories_path, 
                class: "block w-full text-center px-4 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition" do %>
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
              Ir a Inventarios
            <% end %>
          </div>
        </div>

      </div>

    </div>

  </div>
</div>