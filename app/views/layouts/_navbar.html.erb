<nav class="bg-gradient-to-r from-gray-800 to-gray-900 text-white shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      
      <!-- Logo y Nombre del Sistema -->
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <%= link_to root_path, class: "flex items-center space-x-2" do %>
            <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
            <span class="font-bold text-xl">Sistema POS</span>
          <% end %>
        </div>
        
        <!-- Menú de Navegación -->
        <div class="hidden md:block ml-10">
          <div class="flex items-baseline space-x-4">
            
            <!-- Ventas - Todos pueden acceder -->
            <%= link_to "Ventas", sales_path, 
                class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 transition" %>
            
            <!-- Productos - Todos pueden ver -->
            <%= link_to "Productos", products_path, 
                class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 transition" %>
            
            <!-- Clientes - Todos pueden ver -->
            <%= link_to "Clientes", customers_path, 
                class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 transition" %>
            
            <!-- Inventario - Solo almacenista y superiores -->
            <% if policy(Inventory).index? %>
              <%= link_to "Inventario", inventories_path, 
                  class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 transition" %>
            <% end %>
            
            <!-- Proveedores - Solo almacenista y superiores -->
            <% if policy(Supplier).index? %>
              <%= link_to "Proveedores", suppliers_path, 
                  class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 transition" %>
            <% end %>
            
            <!-- Reportes - Solo contador y superiores -->
            <% if policy(:report).profit_report? %>
              <%= link_to "Reportes", reports_path, 
                  class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 transition" %>
            <% end %>
            
            <!-- Usuarios - Solo admin -->
            <% if policy(User).index? %>
              <%= link_to "Usuarios", users_path, 
                  class: "px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 transition" %>
            <% end %>
            
          </div>
        </div>
      </div>

      <!-- Usuario actual y Logout -->
      <div class="flex items-center space-x-4">
        
        <!-- Información del usuario (SIN links a editar perfil) -->
        <div class="hidden md:flex items-center space-x-3">
          <div class="flex items-center space-x-2">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center text-white font-bold text-sm shadow-lg">
              <%= current_user.email.first.upcase %>
            </div>
            
            <div class="flex flex-col">
              <span class="text-sm font-semibold"><%= current_user.name %></span>
              <span class="text-xs <%= role_badge_color(current_user.role) %> px-2 py-0.5 rounded-full font-medium">
                <%= role_name(current_user.role) %>
              </span>
            </div>
          </div>
        </div>
        
        <!-- Botón de Logout (ÚNICO botón de acción para usuarios) -->
        <%= button_to destroy_user_session_path, 
            method: :delete,
            class: "flex items-center space-x-2 px-4 py-2 bg-red-600 hover:bg-red-700 rounded-lg transition shadow-md text-sm font-semibold",
            data: { turbo: false } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          <span>Salir</span>
        <% end %>
        
      </div>
    </div>
  </div>
</nav>