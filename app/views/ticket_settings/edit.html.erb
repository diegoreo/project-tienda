<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-4 py-6">
    
    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg shadow-md p-6 mb-6">
      <h1 class="text-3xl font-bold mb-2">üñ®Ô∏è Configuraci√≥n de Tickets</h1>
      <p class="text-blue-100">Configura el comportamiento de impresi√≥n en el Punto de Venta</p>
    </div>

    <%= form_with model: @company, url: ticket_settings_path, method: :patch, class: "space-y-6" do |f| %>
      
      <!-- Errores -->
      <% if @company.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-red-400 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="text-red-800 font-semibold mb-2"><%= pluralize(@company.errors.count, "error") %></h3>
              <ul class="list-disc list-inside text-red-700 text-sm space-y-1">
                <% @company.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Configuraci√≥n de Impresi√≥n (Modo: always/ask/manual) -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
          <h2 class="text-xl font-bold text-white flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
            </svg>
            Comportamiento en Venta de Mostrador
          </h2>
        </div>
        
        <div class="p-6">
          <p class="text-sm text-gray-600 mb-6">
            Elige c√≥mo se comportar√° la impresi√≥n de tickets al completar una venta en el POS
          </p>
          
          <div class="space-y-3">
            <% Company::TICKET_PRINTING_MODES.each do |label, value| %>
              <label class="flex items-start p-4 border-2 rounded-lg cursor-pointer transition hover:bg-blue-50
                <%= @company.ticket_printing_mode == value ? 'border-blue-500 bg-blue-50' : 'border-gray-200' %>">
                <%= f.radio_button :ticket_printing_mode, value, class: "mt-1 mr-3 w-5 h-5 text-blue-600" %>
                <div class="flex-1">
                  <div class="font-semibold text-gray-800 text-base">
                    <%= label %>
                  </div>
                  <div class="text-sm text-gray-600 mt-1">
                    <%= case value
                        when 'always' then 'üñ®Ô∏è Autom√°ticamente abre el di√°logo de impresi√≥n despu√©s de cada venta.'
                        when 'ask' then '‚ùì Pregunta al cajero si desea imprimir el ticket.'
                        when 'manual' then 'üö´ No imprime autom√°ticamente. Solo permite impresi√≥n manual desde el historial.'
                        end %>
                  </div>
                </div>
              </label>
            <% end %>
          </div>
        </div>
      </div>

      <!-- M√©todo de Impresi√≥n (PDF/WebUSB) - Por PC -->
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="bg-gradient-to-r from-purple-600 to-purple-700 px-6 py-4">
          <h2 class="text-xl font-bold text-white flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            M√©todo de Impresi√≥n
          </h2>
        </div>
        
        <div class="p-6">
          <p class="text-sm text-gray-600 mb-6">
            Selecciona c√≥mo se enviar√°n los tickets a la impresora
          </p>
          
          <div class="space-y-3" id="printing-method-options">
            <% Company::PRINTING_METHODS.each do |label, value| %>
              <label class="flex items-start p-4 border-2 rounded-lg cursor-pointer transition hover:bg-purple-50 printing-method-option border-gray-200"
                     data-value="<%= value %>">
                <input type="radio" 
                       name="printing_method" 
                       value="<%= value %>" 
                       class="mt-1 mr-3 w-5 h-5 text-purple-600">
                <div class="flex-1">
                  <div class="font-semibold text-gray-800 text-base flex items-center gap-2">
                    <%= label %>
                    <% if value == 'webusb' %>
                      <span class="px-2 py-0.5 bg-green-100 text-green-700 text-xs font-bold rounded-full">Recomendado</span>
                    <% end %>
                  </div>
                  <div class="text-sm text-gray-600 mt-1">
                    <%= case value
                        when 'pdf' then 'üìÑ Genera un archivo PDF y lo env√≠a a la impresora configurada en tu sistema operativo. Requiere drivers instalados.'
                        when 'webusb' then 'üîå Se conecta directamente a la impresora por USB sin necesidad de drivers. Funciona en ChromeOS, Windows, Linux y Mac. Ideal para impresoras t√©rmicas.'
                        end %>
                  </div>
                </div>
              </label>
            <% end %>
          </div>

          <div class="mt-4 p-3 bg-blue-50 border border-blue-200 rounded-lg">
            <div class="flex items-start gap-2">
              <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              <p class="text-sm text-blue-800">
                <strong>Nota:</strong> Esta configuraci√≥n se guarda solo para ESTA computadora. 
                Cada caja puede tener su propio m√©todo de impresi√≥n.
              </p>
            </div>
          </div>

          <!-- Bot√≥n para detectar impresoras WebUSB -->
          <div class="mt-6 p-4 bg-purple-50 border border-purple-200 rounded-lg" id="webusb-config" style="display: none;">
            <div class="flex items-start gap-3 mb-4">
              <svg class="w-5 h-5 text-purple-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              <div class="flex-1">
                <p class="text-sm text-purple-800 font-semibold mb-2">Configuraci√≥n de impresora USB</p>
                <p class="text-xs text-purple-700 mb-3">
                  La primera vez que imprimas un ticket, se te pedir√° seleccionar tu impresora USB. 
                  Esta selecci√≥n se guardar√° autom√°ticamente para futuras impresiones.
                </p>
                <p class="text-xs text-purple-700 mb-3">
                  Si necesitas cambiar de impresora, usa el bot√≥n de abajo.
                </p>
              </div>
            </div>
            
            <button 
              type="button"
              data-action="click->thermal-printer#detectPrinters"
              class="w-full px-4 py-3 bg-purple-600 text-white font-semibold rounded-lg hover:bg-purple-700 transition flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              üîÑ Detectar y Configurar Impresora USB
            </button>
            
            <div id="printer-status" class="mt-3 text-xs text-purple-700"></div>
          </div>
        </div>
      </div>

      <!-- Nota importante -->
      <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-lg">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-blue-500 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          <div class="text-sm text-blue-800">
            <p class="font-semibold mb-1">üìù Nota importante:</p>
            <p>Sin importar la configuraci√≥n seleccionada, siempre podr√°s reimprimir tickets manualmente desde el historial de ventas.</p>
          </div>
        </div>
      </div>

      <!-- Botones -->
      <div class="flex flex-col sm:flex-row gap-3">
        <%= f.submit "üíæ Guardar Configuraci√≥n", 
          class: "flex-1 px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white text-base font-bold rounded-lg shadow-lg hover:from-blue-700 hover:to-blue-800 transform hover:scale-[1.02] transition duration-200" %>
        
        <%= link_to "Cancelar", company_path, 
          class: "flex-1 text-center px-6 py-3 bg-gray-200 text-gray-700 text-base font-semibold rounded-lg hover:bg-gray-300 transition duration-200" %>
      </div>

    <% end %>

  </div>
</div>

<script>
  // Ejecutar en una funci√≥n autoinvocada para evitar conflictos con Turbo
  (function() {
    // Cargar m√©todo guardado en localStorage
    const savedMethod = localStorage.getItem('printing_method') || 'webusb'
    
    // Marcar el radio button correcto al cargar
    document.querySelectorAll('input[name="printing_method"]').forEach(radio => {
      if (radio.value === savedMethod) {
        radio.checked = true
        radio.closest('label').classList.add('border-purple-500', 'bg-purple-50')
        radio.closest('label').classList.remove('border-gray-200')
        
        // Mostrar webusb-config si es webusb
        if (savedMethod === 'webusb') {
          document.getElementById('webusb-config').style.display = 'block'
        }
      }
    })
    
    // Guardar cuando cambie
    document.querySelectorAll('input[name="printing_method"]').forEach(radio => {
      radio.addEventListener('change', function() {
        // Guardar en localStorage
        localStorage.setItem('printing_method', this.value)
        console.log('üíæ M√©todo de impresi√≥n guardado:', this.value)
        
        // Actualizar estilos
        document.querySelectorAll('.printing-method-option').forEach(label => {
          label.classList.remove('border-purple-500', 'bg-purple-50')
          label.classList.add('border-gray-200')
        })
        this.closest('label').classList.add('border-purple-500', 'bg-purple-50')
        this.closest('label').classList.remove('border-gray-200')
        
        // Mostrar/ocultar WebUSB config
        const webUsbConfig = document.getElementById('webusb-config')
        if (this.value === 'webusb') {
          webUsbConfig.style.display = 'block'
        } else {
          webUsbConfig.style.display = 'none'
        }
        
        // Confirmar
        alert('‚úÖ M√©todo de impresi√≥n actualizado para ESTA computadora')
      })
    })
    
    // Mostrar impresora guardada si existe
    const savedPrinter = localStorage.getItem('thermal_printer_config')
    if (savedPrinter) {
      const config = JSON.parse(savedPrinter)
      const statusDiv = document.getElementById('printer-status')
      if (statusDiv) {
        statusDiv.innerHTML = `
          <div class="p-2 bg-green-50 border border-green-200 rounded">
            ‚úÖ Impresora configurada: <strong>${config.productName || 'Impresora USB'}</strong>
          </div>
        `
      }
    }
  })(); // ‚Üê Autoinvocar la funci√≥n
</script>