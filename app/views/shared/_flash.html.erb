<% if notice %>
  <div class="fixed top-4 right-4 z-50 max-w-md animate-slide-in" data-controller="dismissable">
    <div class="bg-green-50 border-l-4 border-green-500 rounded-lg shadow-lg p-4 flex items-start gap-3">
      <!-- Icono de éxito -->
      <div class="flex-shrink-0">
        <svg class="w-6 h-6 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      
      <!-- Mensaje -->
      <div class="flex-1">
        <p class="text-sm font-medium text-green-800">
          <%= notice %>
        </p>
      </div>
      
      <!-- Botón cerrar -->
      <button type="button" 
              data-action="click->dismissable#dismiss"
              class="flex-shrink-0 text-green-500 hover:text-green-700 transition">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>
<% end %>

