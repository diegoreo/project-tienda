<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <%= form_with(model: unit, local: true, class: "space-y-6") do |form| %>
    
    <!-- Encabezado del formulario -->
    <div class="bg-gradient-to-r from-teal-600 to-teal-700 text-white px-6 py-4 rounded-lg shadow-md">
      <h2 class="text-2xl font-bold">
        <%= unit.new_record? ? "Nueva Unidad de Medida" : "Editar Unidad de Medida" %>
      </h2>
      <p class="text-teal-100 text-sm mt-1">Define las unidades de compra y venta</p>
    </div>

    <!-- Mensajes de error -->
    <% if unit.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-4">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-red-500 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div class="flex-1">
            <h4 class="text-red-800 font-semibold mb-2">
              <%= pluralize(unit.errors.count, "error") %> impidieron que esta unidad se guardara:
            </h4>
            <ul class="list-disc list-inside text-red-700 space-y-1">
              <% unit.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Formulario principal -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>
        </svg>
        Información de la Unidad
      </h3>

      <div class="space-y-5">
        <!-- Nombre y Abreviatura en fila -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <!-- Nombre (más ancho) -->
          <div class="md:col-span-2">
            <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" do %>
              Nombre <span class="text-red-500">*</span>
            <% end %>
            <%= form.text_field :name, 
                class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition duration-200", 
                placeholder: "Ej. Kilogramo, Metro, Litro" %>
            <p class="mt-1.5 text-xs text-gray-500">
              Nombre completo de la unidad de medida
            </p>
          </div>

          <!-- Abreviatura (más estrecho) -->
          <div>
            <%= form.label :abbreviation, "Abreviatura", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :abbreviation, 
                class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition duration-200 text-center font-semibold", 
                placeholder: "kg", 
                maxlength: "4" %>
            <p class="mt-1.5 text-xs text-gray-500 text-center">
              Máx. 4 caracteres
            </p>
          </div>
        </div>

        <!-- Descripción -->
        <div>
          <%= form.label :description, "Descripción", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, 
              class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-teal-500 focus:border-transparent transition duration-200", 
              rows: 3, 
              placeholder: "Información adicional sobre el uso de esta unidad..." %>
          <p class="mt-2 text-sm text-gray-500">
            Opcional: Agrega una descripción para identificar mejor esta unidad
          </p>
        </div>

        <!-- Ejemplos comunes -->
        <div class="bg-teal-50 border border-teal-200 rounded-lg p-4">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-teal-600 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
              <h4 class="text-sm font-semibold text-teal-800 mb-2">Ejemplos de unidades comunes:</h4>
              <div class="grid grid-cols-2 gap-2 text-xs text-teal-700">
                <div>• <strong>Peso:</strong> kg, g, ton, lb</div>
                <div>• <strong>Volumen:</strong> L, ml, gal</div>
                <div>• <strong>Longitud:</strong> m, cm, km</div>
                <div>• <strong>Cantidad:</strong> pza, caja, paq</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Botones de acción -->
    <div class="flex flex-col sm:flex-row gap-3 pt-4">
      <%= form.submit unit.new_record? ? "Crear Unidad" : "Guardar Cambios", 
          class: "flex-1 sm:flex-none inline-flex justify-center items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-teal-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 shadow-md hover:shadow-lg transition duration-200" %>
      
      <%= link_to "Cancelar", 
          units_path, 
          class: "flex-1 sm:flex-none inline-flex justify-center items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition duration-200" %>
    </div>

  <% end %>
</div>