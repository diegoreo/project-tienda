<style>
  .form-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 30px;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    font-family: 'Arial', sans-serif;
  }

  .form-title {
    text-align: center;
    color: #333;
    margin-bottom: 30px;
    font-size: 28px;
    font-weight: bold;
  }

  .error-container {
    background: linear-gradient(135deg, #ff6b6b, #ee5a52);
    color: white;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 25px;
    box-shadow: 0 2px 10px rgba(255, 107, 107, 0.3);
  }

  .error-container h4 {
    margin: 0 0 15px 0;
    font-size: 18px;
  }

  .error-container ul {
    margin: 0;
    padding-left: 20px;
  }

  .field-group {
    margin-bottom: 25px;
  }

  .form-label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #2c3e50;
    font-size: 16px;
  }

  .required-field {
    color: #e74c3c;
    margin-left: 4px;
  }

  .form-input {
    width: 100%;
    padding: 14px 16px;
    border: 2px solid #e1e5e9;
    border-radius: 8px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: #fafbfc;
    box-sizing: border-box;
  }

  .form-input:focus {
    outline: none;
    border-color: #27ae60;
    background: #ffffff;
    box-shadow: 0 0 0 3px rgba(39, 174, 96, 0.1);
  }

  .form-input.required:focus {
    border-color: #e67e22;
    box-shadow: 0 0 0 3px rgba(230, 126, 34, 0.1);
  }

  .form-textarea {
    width: 100%;
    padding: 14px 16px;
    border: 2px solid #e1e5e9;
    border-radius: 8px;
    font-size: 16px;
    transition: all 0.3s ease;
    background: #fafbfc;
    resize: vertical;
    min-height: 100px;
    font-family: Arial, sans-serif;
    box-sizing: border-box;
  }

  .form-textarea:focus {
    outline: none;
    border-color: #27ae60;
    background: #ffffff;
    box-shadow: 0 0 0 3px rgba(39, 174, 96, 0.1);
  }

  .field-hint {
    font-size: 14px;
    color: #7f8c8d;
    margin-top: 5px;
    font-style: italic;
  }

  .actions-container {
    display: flex;
    gap: 15px;
    justify-content: center;
    margin-top: 35px;
  }

  .btn {
    padding: 14px 30px;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    transition: all 0.3s ease;
    min-width: 140px;
  }

  .btn-primary {
    background: linear-gradient(135deg, #27ae60, #229954);
    color: white;
    box-shadow: 0 4px 15px rgba(39, 174, 96, 0.3);
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #229954, #1e8449);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(39, 174, 96, 0.4);
  }

  .btn-secondary {
    background: linear-gradient(135deg, #95a5a6, #7f8c8d);
    color: white;
    box-shadow: 0 4px 15px rgba(149, 165, 166, 0.3);
  }

  .btn-secondary:hover {
    background: linear-gradient(135deg, #7f8c8d, #6c7b7d);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(149, 165, 166, 0.4);
    color: white;
    text-decoration: none;
  }

  /* Layout de dos columnas para campos relacionados */
  .field-row {
    display: flex;
    gap: 20px;
    margin-bottom: 25px;
  }

  .field-col {
    flex: 1;
  }

  .field-col-small {
    flex: 0.4;
  }

  .field-col-large {
    flex: 0.6;
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .form-container {
      margin: 20px;
      padding: 20px;
    }
    
    .field-row {
      flex-direction: column;
      gap: 0;
    }
    
    .actions-container {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 100%;
      max-width: 250px;
    }
  }
</style>

<div class="form-container">
  <%= form_with(model: unit, local: true) do |form| %>
    <% if unit.errors.any? %>
      <div class="error-container">
        <h4><%= pluralize(unit.errors.count, "error") %> impidieron que esta unidad se guardara:</h4>
        <ul>
          <% unit.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field-row">
      <div class="field-col-large">
        <div class="field-group">
          <%= form.label :name, class: "form-label" do %>
            Nombre <span class="required-field">*</span>
          <% end %>
          <%= form.text_field :name, class: "form-input required", placeholder: "Ej: Kilogramo, Metro, Litro" %>
          <div class="field-hint">Nombre completo de la unidad de medida</div>
        </div>
      </div>

      <div class="field-col-small">
        <div class="field-group">
          <%= form.label :abbreviation, "Abreviación", class: "form-label" %>
          <%= form.text_field :abbreviation, class: "form-input", placeholder: "Ej: kg, m, L", maxlength: "4" %>
          <div class="field-hint">Máximo 4 caracteres</div>
        </div>
      </div>
    </div>

    <div class="field-group">
      <%= form.label :description, "Descripción", class: "form-label" %>
      <%= form.text_area :description, class: "form-textarea", placeholder: "Descripción detallada de la unidad de medida (opcional)" %>
      <div class="field-hint">Información adicional sobre el uso de esta unidad</div>
    </div>

    <div class="actions-container">
      <%= form.submit "Guardar Unidad", class: "btn btn-primary" %>
      <%= link_to "Cancelar", units_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>