<div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden group">
  <!-- Icon Header con degradado -->
  <div class="bg-gradient-to-br from-teal-100 to-teal-200 h-32 flex items-center justify-center relative">
    <svg class="w-16 h-16 text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"/>
    </svg>
    
    <!-- Badge con abreviatura -->
    <div class="absolute top-3 right-3">
      <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-bold bg-teal-600 text-white">
        <%= unit.abbreviation %>
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="p-5">
    <h2 class="text-xl font-bold text-gray-800 mb-3 truncate">
      <%= unit.name %>
    </h2>
    
    <!-- Detalles en formato de lista -->
    <div class="space-y-2 mb-4">
      <div class="flex items-start">
        <svg class="w-4 h-4 text-teal-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
        </svg>
        <div class="flex-1">
          <p class="text-xs text-gray-500 font-medium">Abreviatura</p>
          <p class="text-sm text-gray-800 font-semibold"><%= unit.abbreviation %></p>
        </div>
      </div>

      <% if unit.description.present? %>
        <div class="flex items-start">
          <svg class="w-4 h-4 text-teal-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
          </svg>
          <div class="flex-1">
            <p class="text-xs text-gray-500 font-medium">Descripción</p>
            <p class="text-sm text-gray-700 line-clamp-2"><%= unit.description %></p>
          </div>
        </div>
      <% else %>
        <div class="flex items-start">
          <svg class="w-4 h-4 text-gray-400 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"/>
          </svg>
          <div class="flex-1">
            <p class="text-xs text-gray-500 font-medium">Descripción</p>
            <p class="text-sm text-gray-400 italic">Sin descripción</p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Actions -->
    <div class="flex gap-2 pt-3 border-t border-gray-200">
      <%= link_to edit_unit_path(unit), 
          class: "flex-1 text-center px-4 py-2 bg-teal-600 text-white text-sm font-semibold rounded-md hover:bg-teal-700 transition inline-flex items-center justify-center" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar
      <% end %>
      
      <%= link_to unit_path(unit), 
          data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro de eliminar esta unidad de medida?" },
          class: "flex-1 text-center px-4 py-2 bg-red-100 text-red-700 text-sm font-semibold rounded-md hover:bg-red-200 transition inline-flex items-center justify-center" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Eliminar
      <% end %>
    </div>
  </div>
</div>