<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-50 py-8 px-4">
  <div class="max-w-3xl mx-auto">
    
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm">
      <%= link_to "Clientes", customers_path, class: "text-green-600 hover:text-green-800" %> 
      <span class="text-gray-400 mx-2">/</span>
      <%= link_to @customer.name, customer_path(@customer), class: "text-green-600 hover:text-green-800" %>
      <span class="text-gray-400 mx-2">/</span>
      <span class="text-gray-600">Registrar Pago</span>
    </nav>

    <!-- Header -->
    <div class="bg-gradient-to-r from-green-600 to-emerald-600 rounded-xl shadow-lg p-6 mb-6 text-white">
      <h1 class="text-3xl font-bold mb-2">Registrar Pago</h1>
      <p class="text-green-100">Cliente: <span class="font-semibold"><%= @customer.name %></span></p>
      <p class="text-green-100">Deuda actual: <span class="font-bold text-2xl"><%= number_to_currency(@customer.current_debt) %></span></p>
    </div>

    <!-- Formulario -->
    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with model: [@customer, @payment], local: true do |f| %>
        
        <!-- Errores -->
        <% if @payment.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded">
            <div class="flex items-center mb-2">
              <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <h4 class="font-bold text-red-800"><%= pluralize(@payment.errors.count, "error") %> impidieron guardar:</h4>
            </div>
            <ul class="list-disc list-inside text-red-700">
              <% @payment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Monto -->
        <div class="mb-6">
          <%= f.label :amount, "Monto del pago *", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <%= f.number_field :amount, 
              step: 0.01, 
              min: 0.01,
              max: @customer.current_debt,
              class: "w-full px-4 py-3 text-2xl font-bold border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition", 
              placeholder: "0.00",
              required: true,
              autofocus: true %>
          <p class="mt-2 text-sm text-gray-500">Máximo: <%= number_to_currency(@customer.current_debt) %></p>
        </div>

        <!-- Fecha de pago -->
        <div class="mb-6">
          <%= f.label :payment_date, "Fecha de pago *", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <%= f.date_field :payment_date, 
              class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition",
              required: true %>
        </div>

        <!-- Método de pago -->
        <div class="mb-6">
          <%= f.label :payment_method, "Método de pago *", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <%= f.select :payment_method,
              Payment.payment_methods.keys.map { |key| [key.titleize, key] },
              {},
              class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition" %>
        </div>

        <!-- Venta específica (opcional) -->
        <% if @pending_sales.any? %>
          <div class="mb-6">
            <%= f.label :sale_id, "Asociar a venta específica (opcional)", class: "block text-sm font-bold text-gray-700 mb-2" %>
            <%= f.select :sale_id,
                options_for_select(
                  [["Abono general (no asociado a venta)", nil]] + 
                  @pending_sales.map { |s| ["Venta #{l(s.sale_date, format: :short)} - Pendiente: #{number_to_currency(s.pending_amount)}", s.id] },
                  params[:sale_id]
                ),
                {},
                class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition" %>
            <p class="mt-2 text-sm text-gray-500">Si seleccionas una venta, el pago se aplicará específicamente a esa venta</p>
          </div>
        <% end %>

        <!-- Notas -->
        <div class="mb-6">
          <%= f.label :notes, "Notas", class: "block text-sm font-bold text-gray-700 mb-2" %>
          <%= f.text_area :notes, 
              rows: 3,
              class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent transition resize-vertical",
              placeholder: "Información adicional sobre el pago..." %>
        </div>

        <!-- Botones -->
        <div class="flex gap-4 justify-end pt-4 border-t">
          <%= link_to "Cancelar", customer_path(@customer), 
              class: "px-6 py-3 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition" %>
          
          <%= f.submit "Registrar Pago", 
              class: "px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-500 text-white font-bold rounded-lg hover:from-green-600 hover:to-emerald-600 transition shadow-md flex items-center gap-2" %>
        </div>

      <% end %>
    </div>

    <!-- Resumen de ventas pendientes -->
    <% if @pending_sales.any? %>
      <div class="mt-6 bg-yellow-50 border-l-4 border-yellow-500 p-6 rounded-lg">
        <h3 class="font-bold text-yellow-800 mb-3 flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Ventas pendientes de pago
        </h3>
        <div class="space-y-2">
          <% @pending_sales.each do |sale| %>
            <div class="flex justify-between items-center text-sm">
              <span class="text-gray-700">
                <%= link_to sale_path(sale), class: "hover:text-green-600" do %>
                  Venta del <%= l(sale.sale_date, format: :short) %>
                <% end %>
              </span>
              <span class="font-bold text-yellow-700"><%= number_to_currency(sale.pending_amount) %></span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>