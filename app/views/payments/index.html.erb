<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-50 py-8 px-4">
  <div class="max-w-6xl mx-auto">
    
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm">
      <%= link_to "Clientes", customers_path, class: "text-green-600 hover:text-green-800" %> 
      <span class="text-gray-400 mx-2">/</span>
      <%= link_to @customer.name, customer_path(@customer), class: "text-green-600 hover:text-green-800" %>
      <span class="text-gray-400 mx-2">/</span>
      <span class="text-gray-600">Historial de Pagos</span>
    </nav>

    <!-- Header -->
    <div class="bg-gradient-to-r from-green-600 to-emerald-600 rounded-xl shadow-lg p-6 mb-6 text-white">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold mb-2">Historial de Pagos</h1>
          <p class="text-green-100">Cliente: <span class="font-semibold"><%= @customer.name %></span></p>
        </div>
        <%= link_to new_customer_payment_path(@customer), 
            class: "px-6 py-3 bg-white text-green-700 font-bold rounded-lg hover:bg-green-50 transition flex items-center gap-2" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          Nuevo Pago
        <% end %>
      </div>
    </div>

    <!-- Tabla de pagos -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      <% if @payments.any? %>
        <table class="w-full">
          <thead class="bg-gray-50 border-b">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase">Fecha</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase">Monto</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase">Método</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase">Venta Asociada</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase">Notas</th>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-600 uppercase">Acciones</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @payments.each do |payment| %>
              <tr class="hover:bg-green-50 transition">
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-gray-900"><%= l(payment.payment_date, format: :short) %></div>
                  <div class="text-xs text-gray-500"><%= l(payment.created_at, format: :long) %></div>
                </td>
                <td class="px-6 py-4">
                  <span class="text-xl font-bold text-green-600"><%= number_to_currency(payment.amount) %></span>
                </td>
                <td class="px-6 py-4">
                  <span class="px-3 py-1 text-sm font-semibold rounded-full bg-blue-100 text-blue-700">
                    <%= payment.payment_method.titleize %>
                  </span>
                </td>
                <td class="px-6 py-4 text-sm">
                  <% if payment.sale %>
                    <%= link_to sale_path(payment.sale), class: "text-green-600 hover:text-green-800 font-medium" do %>
                      Venta #<%= payment.sale.id %> (<%= l(payment.sale.sale_date, format: :short) %>)
                    <% end %>
                  <% else %>
                    <span class="text-gray-400 italic">Abono general</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-600">
                  <%= payment.notes.present? ? payment.notes : "-" %>
                </td>
                <td class="px-6 py-4">
                  <%= link_to customer_payment_path(@customer, payment),
                      data: { turbo_method: :delete, turbo_confirm: "¿Eliminar este pago de #{number_to_currency(payment.amount)}? La deuda se revertirá." },
                      class: "text-sm px-3 py-1 bg-red-500 text-white font-semibold rounded hover:bg-red-600 transition" do %>
                    Eliminar
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="py-12 text-center">
          <svg class="w-20 h-20 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <p class="text-gray-500 text-lg">No hay pagos registrados para este cliente</p>
        </div>
      <% end %>
    </div>

    <!-- Botón volver -->
    <div class="mt-6">
      <%= link_to customer_path(@customer), 
          class: "inline-flex items-center gap-2 px-6 py-3 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Volver al cliente
      <% end %>
    </div>

  </div>
</div>