<div class="bg-white rounded-lg shadow-md hover:shadow-xl transition duration-300 overflow-hidden border border-gray-200">
  <!-- Header Card -->
  <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 px-4 py-3">
    <div class="flex items-start justify-between">
      <div class="flex-1 min-w-0">
        <h3 class="text-lg font-bold text-white truncate">
          <%= supplier.name %>
        </h3>
        <% if supplier.company_name.present? %>
          <p class="text-xs text-indigo-100 truncate mt-0.5">
            <%= supplier.company_name %>
          </p>
        <% end %>
      </div>
      <span class="ml-2 inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold <%= supplier.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
        <%= supplier.active? ? 'Activo' : 'Inactivo' %>
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="p-4 space-y-3">
    
    <!-- Email -->
    <% if supplier.email.present? %>
      <div class="flex items-center text-sm">
        <svg class="w-4 h-4 text-indigo-600 mr-2 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        <span class="text-gray-700 truncate"><%= supplier.email %></span>
      </div>
    <% end %>

    <!-- Phone -->
    <% if supplier.phone.present? %>
      <div class="flex items-center text-sm">
        <svg class="w-4 h-4 text-indigo-600 mr-2 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
        <span class="text-gray-700"><%= supplier.phone %></span>
      </div>
    <% end %>

    <!-- RFC -->
    <% if supplier.rfc.present? %>
      <div class="flex items-center text-sm">
        <svg class="w-4 h-4 text-indigo-600 mr-2 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <span class="text-gray-700 font-mono text-xs"><%= supplier.rfc %></span>
      </div>
    <% end %>

    <!-- City -->
    <% if supplier.city.present? %>
      <div class="flex items-center text-sm">
        <svg class="w-4 h-4 text-indigo-600 mr-2 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <span class="text-gray-700"><%= supplier.city %><%= ", #{supplier.state}" if supplier.state.present? %></span>
      </div>
    <% end %>

    <!-- Contact Info (legacy field) -->
    <% if supplier.contact_info.present? %>
      <div class="pt-2 border-t border-gray-200">
        <p class="text-xs text-gray-500 mb-1">Contacto:</p>
        <p class="text-sm text-gray-700"><%= supplier.contact_info %></p>
      </div>
    <% end %>
  </div>

  <!-- Actions Footer -->
  <div class="bg-gray-50 px-4 py-3 flex gap-2">
    <%= link_to supplier_path(supplier), 
        data: { turbo_frame: "_top" },  # ← AGREGAR ESTO
        class: "flex-1 inline-flex items-center justify-center px-3 py-2 border border-indigo-300 text-sm font-medium rounded-lg text-indigo-700 bg-white hover:bg-indigo-50 transition duration-200" do %>
      <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
      </svg>
      Ver
    <% end %>
  
    <%= link_to edit_supplier_path(supplier), 
        data: { turbo_frame: "_top" },  # ← AGREGAR ESTO
        class: "flex-1 inline-flex items-center justify-center px-3 py-2 bg-gradient-to-r from-indigo-600 to-indigo-700 text-sm font-medium rounded-lg text-white hover:from-indigo-700 hover:to-indigo-800 transition duration-200" do %>
      <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
      Editar
    <% end %>
  </div>
</div>