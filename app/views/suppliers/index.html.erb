<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto px-4 py-6">
    
    <!-- Header Section - Compacto -->
    <div class="bg-white rounded-lg shadow-md p-4 mb-4">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
        <div>
          <h1 class="text-2xl font-bold text-gray-800">Proveedores</h1>
          <div class="flex gap-3 mt-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-green-100 text-green-800">
              <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-1.5"></span>
              <%= Supplier.active.count %> Activos
            </span>
            <% if Supplier.inactive.count > 0 %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold bg-red-100 text-red-800">
                <span class="w-1.5 h-1.5 bg-red-500 rounded-full mr-1.5"></span>
                <%= Supplier.inactive.count %> Inactivos
              </span>
            <% end %>
          </div>
        </div>
        <%= link_to new_supplier_path, 
            data: { turbo_frame: "_top" },  # ← AGREGAR ESTO
            class: "inline-flex items-center justify-center px-5 py-2.5 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white text-sm font-semibold rounded-lg shadow-lg hover:from-indigo-700 hover:to-indigo-800 transform hover:scale-105 transition duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Nuevo Proveedor
        <% end %>
      </div>
    </div>

    <%= turbo_frame_tag "suppliers" do %>
      <!-- Filtros Compactos -->
      <div class="bg-white rounded-lg shadow-md p-4 mb-4">
        <div class="flex flex-col sm:flex-row sm:items-center gap-4">
          <!-- Filtro de Estado -->
          <div class="flex items-center gap-2 shrink-0">
            <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm font-semibold text-gray-700">Estado:</span>
            <div class="flex gap-2">
              <%= link_to suppliers_path(query: params[:query]), 
                  class: "px-3 py-1 rounded-full text-xs font-medium transition #{params[:status].blank? ? 'bg-green-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" do %>
                Activos
              <% end %>

              <%= link_to suppliers_path(status: 'inactive', query: params[:query]), 
                  class: "px-3 py-1 rounded-full text-xs font-medium transition #{params[:status] == 'inactive' ? 'bg-red-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" do %>
                Inactivos
              <% end %>

              <%= link_to suppliers_path(status: 'all', query: params[:query]), 
                  class: "px-3 py-1 rounded-full text-xs font-medium transition #{params[:status] == 'all' ? 'bg-gray-700 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" do %>
                Todos
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Search Bar -->
      <div class="bg-white rounded-lg shadow-md p-4 mb-6">
        <%= form_with url: suppliers_path, method: :get, local: true do %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <%= text_field_tag :query, params[:query], 
              placeholder: "Buscar por nombre, RFC, email o ciudad...", 
              class: "block w-full pl-10 pr-28 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition text-sm" %>
            <%= hidden_field_tag :status, params[:status] %>
            <%= submit_tag "Buscar", class: "absolute right-2 top-1/2 transform -translate-y-1/2 px-5 py-1.5 bg-indigo-600 text-white text-sm font-semibold rounded-md hover:bg-indigo-700 transition cursor-pointer" %>
          </div>
        <% end %>
      </div>

      <!-- Suppliers Grid -->
      <% if @suppliers.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <%= render partial: "supplier", collection: @suppliers %>
        </div>
      <% else %>
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
          <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <h3 class="text-xl font-semibold text-gray-700 mb-2">No se encontraron proveedores</h3>
          <p class="text-gray-500 mb-6">Intenta con otra búsqueda o agrega un nuevo proveedor</p>
          <%= link_to new_supplier_path, class: "inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Crear Primer Proveedor
          <% end %>
        </div>
      <% end %>
    <% end %>

  </div>
</div>