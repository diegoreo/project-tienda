<div class="bg-gray-50 min-h-screen py-8">
  <div class="container mx-auto px-4 max-w-5xl">
    
    <!-- Breadcrumb -->
    <nav class="mb-6 flex items-center space-x-2 text-sm text-gray-600">
      <%= link_to suppliers_path, class: "hover:text-indigo-600 transition" do %>
        Proveedores
      <% end %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-gray-900 font-medium"><%= @supplier.name %></span>
    </nav>

    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      
      <!-- Header Section -->
      <div class="bg-gradient-to-r from-indigo-600 to-indigo-800 p-6 text-white">
        <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-2">
              <h1 class="text-3xl font-bold"><%= @supplier.name %></h1>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold <%= @supplier.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= @supplier.active? ? 'Activo' : 'Inactivo' %>
              </span>
            </div>
            <% if @supplier.company_name.present? %>
              <p class="text-indigo-100 text-lg"><%= @supplier.company_name %></p>
            <% end %>
            <% if @supplier.rfc.present? %>
              <p class="text-indigo-200 text-sm mt-1 font-mono">RFC: <%= @supplier.rfc %></p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Content Grid -->
      <div class="grid md:grid-cols-3 gap-6 p-6">
        
        <!-- Main Info Column -->
        <div class="md:col-span-2 space-y-6">
          
          <!-- Información de Contacto -->
          <div class="bg-gray-50 rounded-lg p-5">
            <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              Información de Contacto
            </h2>
            
            <div class="space-y-3">
              <% if @supplier.email.present? %>
                <div class="flex items-center">
                  <div class="w-24 text-sm font-medium text-gray-600">Email:</div>
                  <a href="mailto:<%= @supplier.email %>" class="text-indigo-600 hover:text-indigo-800 transition">
                    <%= @supplier.email %>
                  </a>
                </div>
              <% end %>

              <% if @supplier.phone.present? %>
                <div class="flex items-center">
                  <div class="w-24 text-sm font-medium text-gray-600">Teléfono:</div>
                  <a href="tel:<%= @supplier.phone %>" class="text-gray-800">
                    <%= @supplier.phone %>
                  </a>
                </div>
              <% end %>

              <% if @supplier.mobile.present? %>
                <div class="flex items-center">
                  <div class="w-24 text-sm font-medium text-gray-600">Celular:</div>
                  <a href="tel:<%= @supplier.mobile %>" class="text-gray-800">
                    <%= @supplier.mobile %>
                  </a>
                </div>
              <% end %>

              <% if @supplier.contact_info.present? %>
                <div class="pt-3 border-t border-gray-200">
                  <div class="text-sm font-medium text-gray-600 mb-1">Información adicional:</div>
                  <p class="text-gray-800"><%= @supplier.contact_info %></p>
                </div>
              <% end %>

              <% if @supplier.email.blank? && @supplier.phone.blank? && @supplier.mobile.blank? && @supplier.contact_info.blank? %>
                <p class="text-gray-500 italic">No hay información de contacto registrada</p>
              <% end %>
            </div>
          </div>

          <!-- Dirección -->
          <div class="bg-gray-50 rounded-lg p-5">
            <h2 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
              <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              Dirección
            </h2>
            
            <% if @supplier.address.present? || @supplier.city.present? %>
              <div class="bg-white rounded-lg p-4 border border-gray-200">
                <% if @supplier.address.present? %>
                  <p class="text-gray-800 mb-2"><%= @supplier.address %></p>
                <% end %>
                <div class="text-sm text-gray-600">
                  <%= [@supplier.city, @supplier.state].compact.join(', ') %>
                  <%= ", CP: #{@supplier.zip_code}" if @supplier.zip_code.present? %>
                </div>
              </div>
            <% else %>
              <p class="text-gray-500 italic">No hay dirección registrada</p>
            <% end %>
          </div>

          <!-- Notas -->
          <% if @supplier.notes.present? %>
            <div class="bg-gray-50 rounded-lg p-5">
              <h2 class="text-lg font-semibold text-gray-800 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Notas y Observaciones
              </h2>
              <div class="bg-white rounded-lg p-4 border border-gray-200">
                <p class="text-gray-700 whitespace-pre-wrap"><%= @supplier.notes %></p>
              </div>
            </div>
          <% end %>

        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          
          <!-- Quick Stats Card -->
          <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-lg p-5 border-2 border-indigo-200">
            <h3 class="text-sm font-semibold text-indigo-800 mb-3">Información General</h3>
            <div class="space-y-2">
              <div class="flex justify-between items-center">
                <span class="text-xs text-indigo-700">Estado:</span>
                <span class="text-sm font-semibold <%= @supplier.active? ? 'text-green-700' : 'text-red-700' %>">
                  <%= @supplier.active? ? 'Activo' : 'Inactivo' %>
                </span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-xs text-indigo-700">Creado:</span>
                <span class="text-sm font-semibold text-indigo-900">
                  <%= @supplier.created_at.strftime("%d/%m/%Y") %>
                </span>
              </div>
              <% if @supplier.updated_at != @supplier.created_at %>
                <div class="flex justify-between items-center">
                  <span class="text-xs text-indigo-700">Actualizado:</span>
                  <span class="text-sm font-semibold text-indigo-900">
                    <%= @supplier.updated_at.strftime("%d/%m/%Y") %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Actions -->
          <div class="space-y-3">
            <%= link_to edit_supplier_path(@supplier), 
                data: { turbo_frame: "_top" },  # ← AGREGAR ESTO
                class: "flex items-center justify-center w-full px-4 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition shadow-md" do %>
              <!-- SVG y texto -->
              Editar Proveedor
            <% end %>

            <%= link_to suppliers_path, 
                data: { turbo_frame: "_top" },  # ← AGREGAR ESTO
                class: "flex items-center justify-center w-full px-4 py-3 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition" do %>
              <!-- SVG y texto -->
              Volver a Proveedores
            <% end %>

            <%= link_to supplier_path(@supplier), 
                data: { turbo_method: :delete, turbo_confirm: "¿Estás seguro de eliminar este proveedor?" }, 
                class: "flex items-center justify-center w-full px-4 py-3 bg-red-100 text-red-700 font-semibold rounded-lg hover:bg-red-200 transition border-2 border-red-300" do %>
              <!-- SVG y texto -->
              Eliminar Proveedor
            <% end %>
          </div>

        </div>

      </div>

    </div>
  </div>
</div>