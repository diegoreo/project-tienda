<div class="bg-gray-50 min-h-screen">
  <div class="container mx-auto px-4 py-6">
    
    <!-- Breadcrumb -->
    <nav class="flex mb-6" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <%= link_to inventories_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" do %>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
            </svg>
            Inventarios
          <% end %>
        </li>
        <li aria-current="page">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Detalle #<%= @inventory.id %></span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Header con acciones -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-800">
            <%= @inventory.product.name %>
          </h1>
          <p class="text-gray-600 mt-1">Control de inventario detallado</p>
        </div>

        <!-- Botones de acción -->
        <div class="flex flex-col sm:flex-row gap-3">
          <%= link_to new_inventory_inventory_adjustment_path(@inventory), 
              class: "inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-orange-600 to-orange-700 text-white font-semibold rounded-lg shadow-lg hover:from-orange-700 hover:to-orange-800 transform hover:scale-105 transition duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Nuevo Ajuste
          <% end %>
          
          <%= link_to inventory_inventory_adjustments_path(@inventory), 
              class: "inline-flex items-center justify-center px-6 py-3 bg-white text-gray-700 font-semibold rounded-lg border-2 border-gray-300 hover:bg-gray-50 transition duration-200" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            Ver Historial
          <% end %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      
      <!-- Columna Principal -->
      <div class="lg:col-span-2 space-y-6">
        
        <!-- Información del Producto -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
            <h2 class="text-xl font-bold text-white flex items-center">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
              </svg>
              Información del Producto
            </h2>
          </div>
          
          <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <!-- ID del Inventario -->
              <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">ID Inventario</label>
                <p class="text-lg font-semibold text-gray-800">#<%= @inventory.id %></p>
              </div>

              <!-- Producto -->
              <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Producto</label>
                <p class="text-lg font-semibold text-gray-800"><%= @inventory.product.name %></p>
              </div>

              <!-- Categoría -->
              <% if @inventory.product.category %>
                <div>
                  <label class="block text-sm font-medium text-gray-500 mb-1">Categoría</label>
                  <span class="inline-block px-3 py-1 text-sm font-semibold text-purple-700 bg-purple-100 rounded-full">
                    <%= @inventory.product.category.name %>
                  </span>
                </div>
              <% end %>

              <!-- Unidad de venta -->
              <div>
                <label class="block text-sm font-medium text-gray-500 mb-1">Unidad de Venta</label>
                <p class="text-lg font-semibold text-gray-800">
                  <%= @inventory.product.sale_unit.name %>
                  <span class="text-sm text-gray-500">(<%= @inventory.product.sale_unit.abbreviation %>)</span>
                </p>
              </div>

              <!-- Precio - PROTEGIDO CON PUNDIT -->
              <% if @show_costs %>
                <div>
                  <label class="block text-sm font-medium text-gray-500 mb-1">Precio de Venta</label>
                  <p class="text-2xl font-bold text-green-600">
                    <%= number_to_currency(@inventory.product.price) %>
                  </p>
                </div>

                <!-- Valor Total en Stock - PROTEGIDO CON PUNDIT -->
                <div>
                  <label class="block text-sm font-medium text-gray-500 mb-1">Valor Total en Stock</label>
                  <p class="text-2xl font-bold text-emerald-600">
                    <%= number_to_currency(@inventory.quantity * @inventory.product.price) %>
                  </p>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Información del Almacén -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-gradient-to-r from-teal-600 to-teal-700 px-6 py-4">
            <h2 class="text-xl font-bold text-white flex items-center">
              <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
              Ubicación
            </h2>
          </div>
          
          <div class="p-6">
            <div class="flex items-start">
              <div class="flex-shrink-0 h-12 w-12 bg-teal-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <div class="ml-4">
                <label class="block text-sm font-medium text-gray-500 mb-1">Almacén</label>
                <p class="text-xl font-bold text-gray-800"><%= @inventory.warehouse.name %></p>
                <% if @inventory.warehouse.location.present? %>
                  <p class="text-sm text-gray-600 mt-1">
                    <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <%= @inventory.warehouse.location %>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        </div>

      </div>

      <!-- Columna Lateral - Stock -->
      <div class="space-y-6">
        
        <!-- Tarjeta de Stock Actual -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="<%= @inventory.quantity > 50 ? 'bg-gradient-to-br from-green-500 to-green-600' : @inventory.quantity > 10 ? 'bg-gradient-to-br from-yellow-500 to-yellow-600' : 'bg-gradient-to-br from-red-500 to-red-600' %> p-6 text-white">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-lg font-semibold">Stock Actual</h3>
              <% if inventory.quantity > 50 %>
                <span class="px-3 py-1 bg-white bg-opacity-30 rounded-full text-xs font-bold">
                  ÓPTIMO
                </span>
              <% elsif inventory.quantity > 10 %>
                <span class="px-3 py-1 bg-white bg-opacity-30 rounded-full text-xs font-bold">
                  MEDIO
                </span>
              <% else %>
                <span class="px-3 py-1 bg-white bg-opacity-30 rounded-full text-xs font-bold animate-pulse">
                  BAJO
                </span>
              <% end %>
            </div>
            
            <div class="text-center">
              <%
                display_quantity = if inventory.product.presentation?
                  inventory.product.available_stock(inventory.warehouse)
                else
                  inventory.quantity
                end
              %>
              <p class="text-6xl font-bold mb-2">
                <%= number_with_delimiter(display_quantity.to_i) %>
              </p>
              <p class="text-xl font-medium opacity-90">
                <%= @inventory.product.sale_unit.abbreviation %>
              </p>
            </div>
          </div>

          <!-- Indicador de progreso -->
          <div class="p-4 bg-gray-50">
            <div class="flex items-center justify-between text-sm text-gray-600 mb-2">
              <span>Nivel de stock</span>
              <span class="font-semibold"><%= (@inventory.quantity > 100 ? 100 : (@inventory.quantity * 100 / 100).to_i) %>%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
              <div class="<%= @inventory.quantity > 50 ? 'bg-green-500' : @inventory.quantity > 10 ? 'bg-yellow-500' : 'bg-red-500' %> h-3 rounded-full transition-all duration-500" 
                   style="width: <%= @inventory.quantity > 100 ? 100 : @inventory.quantity %>%">
              </div>
            </div>
          </div>
        </div>

        <!-- Stock Mínimo -->
        <% if @inventory.minimum_quantity.present? %>
          <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-start">
              <div class="flex-shrink-0 h-10 w-10 bg-orange-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
              </div>
              <div class="ml-4">
                <label class="block text-sm font-medium text-gray-500 mb-1">Stock Mínimo</label>
                <p class="text-2xl font-bold text-gray-800">
                  <%= number_with_delimiter(@inventory.minimum_quantity.to_i) %>
                  <span class="text-sm font-normal text-gray-500"><%= @inventory.product.sale_unit.abbreviation %></span>
                </p>
                <% if @inventory.quantity <= @inventory.minimum_quantity %>
                  <p class="mt-2 text-sm text-red-600 font-semibold">
                    ⚠️ Por debajo del stock mínimo
                  </p>
                <% else %>
                  <p class="mt-2 text-sm text-green-600 font-semibold">
                    ✓ Por encima del stock mínimo
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Acciones Rápidas -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Acciones Rápidas
          </h3>
          
          <div class="space-y-3">
            <%= link_to new_inventory_inventory_adjustment_path(@inventory), 
                class: "block w-full text-center px-4 py-3 bg-orange-600 text-white font-semibold rounded-lg hover:bg-orange-700 transition" do %>
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              Ajustar Stock
            <% end %>
            
            <%= link_to inventory_inventory_adjustments_path(@inventory), 
                class: "block w-full text-center px-4 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition" do %>
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Ver Historial
            <% end %>
            
            <%= link_to inventories_path, 
                class: "block w-full text-center px-4 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition" do %>
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              Volver al Listado
            <% end %>
          </div>
        </div>

      </div>

    </div>

  </div>
</div>