              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                <%= link_to inventories_path(sort: 'warehouse_name', direction: params[:sort] == 'warehouse_name' && params[:direction] == 'asc' ? 'desc' : 'asc', query: params[:query], warehouse_id: params[:warehouse_id], stock_status: params[:stock_status], category_id: params[:category_id]), class: "flex items-center hover:text-blue-600 transition" do %>
                  Almac√©n
                  <% if params[:sort] == 'warehouse_name' %>
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <% if params[:direction] == 'asc' %>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"/>
                      <% else %>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                      <% end %>
                    </svg>
                  <% else %>
                    <svg class="w-4 h-4 ml-1 opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                  <% end %>
                <% end %>
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                <%= link_to inventories_path(sort: 'quantity', direction: params[:sort] == 'quantity' && params[:direction] == 'asc' ? 'desc' : 'asc', query: params[:query], warehouse_id: params[:warehouse_id], stock_status: params[:stock_status], category_id: params[:category_id]), class: "flex items-center hover:text-blue-600 transition" do %>
                  Cantidad
                  <% if params[:sort] == 'quantity' || params[:sort].blank? %>
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <% if params[:direction] == 'desc' %>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                      <% else %>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"/>
                      <% end %>
                    </svg>
                  <% else %>
                    <svg class="w-4 h-4 ml-1 opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                  <% end %>
                <% end %>
              </th>
              <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                Estado
              </th>
              <% if @show_costs %>
                <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  <%= link_to inventories_path(sort: 'value', direction: params[:sort] == 'value' && params[:direction] == 'asc' ? 'desc' : 'asc', query: params[:query], warehouse_id: params[:warehouse_id], stock_status: params[:stock_status], category_id: params[:category_id]), class: "flex items-center hover:text-blue-600 transition" do %>
                    Valor
                    <% if params[:sort] == 'value' %>
                      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <% if params[:direction] == 'asc' %>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"/>
                        <% else %>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                        <% end %>
                      </svg>
                    <% else %>
                      <svg class="w-4 h-4 ml-1 opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                      </svg>
                    <% end %>
                  <% end %>
                </th>
              <% end %>
              <th scope="col" class="px-6 py-4 text-right text-xs font-semibold text-gray-700 uppercase tracking-wider">
                Acciones
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if @inventories.any? %>
              <% @inventories.each do |inventory| %>
                <tr class="hover:bg-gray-50 transition duration-150">
                  <!-- ID -->
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    #<%= inventory.id %>
                  </td>
                  
                  <!-- Producto -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                        </svg>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">
                          <%= inventory.product.name %>
                        </div>
                        <% if inventory.product.category %>
                          <div class="text-xs text-gray-500">
                            <%= inventory.product.category.name %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </td>
                  
                  <!-- Almac√©n -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                      </svg>
                      <div class="text-sm text-gray-900">
                        <%= inventory.warehouse.name %>
                      </div>
                    </div>
                  </td>
                  
                  <!-- Cantidad -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%
                      display_quantity = if inventory.product.presentation?
                        inventory.product.available_stock(inventory.warehouse)
                      else
                        inventory.quantity
                      end
                    %>
                    <div class="text-sm font-bold <%= display_quantity > 50 ? 'text-green-600' : display_quantity > 10 ? 'text-yellow-600' : 'text-red-600' %>">
                      <%= number_with_delimiter(display_quantity.to_i) %>
                      <span class="text-xs font-normal text-gray-500 ml-1">
                        <%= inventory.product.sale_unit.abbreviation %>
                      </span>
                    </div>
                  </td>
                  
                  <!-- Estado del Stock -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if display_quantity > 50 %>
                      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                        <span class="w-2 h-2 bg-green-500 rounded-full mr-1.5"></span>
                        √ìptimo
                      </span>
                    <% elsif display_quantity > 10 %>
                      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-yellow-100 text-yellow-800">
                        <span class="w-2 h-2 bg-yellow-500 rounded-full mr-1.5"></span>
                        Medio
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-red-100 text-red-800">
                        <span class="w-2 h-2 bg-red-500 rounded-full mr-1.5"></span>
                        Bajo
                      </span>
                    <% end %>
                  </td>
                  
                  <!-- Valor Total (Cantidad √ó Precio) - SOLO SI TIENE PERMISOS -->
                  <% if @show_costs %>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% if inventory.product.presentation? %>
                        <div class="text-sm font-semibold text-indigo-600">
                          <%= number_to_currency(display_quantity * inventory.product.price) %>
                        </div>
                        <div class="text-xs text-gray-400 italic">*No suma al total</div>
                      <% else %>
                        <div class="text-sm font-semibold text-emerald-600">
                          <%= number_to_currency(inventory.quantity * inventory.product.price) %>
                        </div>
                      <% end %>
                    </td>
                  <% end %>
                  
                  <!-- Acciones -->
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <div class="flex items-center justify-end gap-2">
                      <%= link_to inventory_path(inventory), 
                          class: "inline-flex items-center px-3 py-1.5 bg-blue-600 text-white text-xs font-semibold rounded-md hover:bg-blue-700 transition" do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        Ver
                      <% end %>
                      
                      <%= link_to inventory_inventory_adjustments_path(inventory), 
                          class: "inline-flex items-center px-3 py-1.5 bg-orange-600 text-white text-xs font-semibold rounded-md hover:bg-orange-700 transition" do %>
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        Ajustar
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="<%= @show_costs ? '8' : '7' %>" class="px-6 py-12 text-center">
                  <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                  </svg>
                  <h3 class="text-lg font-semibold text-gray-700 mb-2">No hay inventarios registrados</h3>
                  <p class="text-gray-500">Los inventarios se crean autom√°ticamente al agregar productos</p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- PAGINACI√ìN TABLA -->
      <% if @inventories.any? %>
        <%= render 'shared/pagy_nav', pagy: @pagy %>
      <% end %>

    </div>
    <% end %>
