<div class="min-h-screen bg-gradient-to-br from-indigo-50 to-purple-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900">
        <%= @user.new_record? ? "Nuevo Usuario" : "Editar Usuario" %>
      </h1>
      <p class="mt-2 text-gray-600">Complete la información del usuario del sistema</p>
    </div>

    <!-- Formulario -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
      <%= form_with(model: @user, local: true, class: "space-y-6 p-8") do |form| %>
        
        <!-- Errores -->
        <% if @user.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-lg">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-red-500 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div>
                <h3 class="text-sm font-medium text-red-800 mb-2">
                  <%= pluralize(@user.errors.count, "error") %> impidieron guardar este usuario:
                </h3>
                <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Información Básica -->
        <div class="space-y-6">
          <h3 class="text-lg font-semibold text-gray-800 flex items-center">
            <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Información Personal
          </h3>

          <!-- Nombre completo -->
          <div>
            <%= form.label :name, "Nombre completo", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, 
                class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition", 
                placeholder: "Ej. Juan Pérez García",
                autofocus: true %>
          </div>

          <!-- Email -->
          <div>
            <%= form.label :email, "Correo electrónico", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, 
                class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition", 
                placeholder: "usuario@ejemplo.com",
                autocomplete: "email" %>
          </div>
        </div>

        <!-- Rol y Permisos -->
        <div class="space-y-6 pt-6 border-t border-gray-200">
          <h3 class="text-lg font-semibold text-gray-800 flex items-center">
            <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            Rol y Permisos
          </h3>

          <!-- Rol -->
          <div>
            <%= form.label :role, "Rol del usuario", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :role, 
                [
                  ['Cajero - Acceso básico para ventas', 'cajero'],
                  ['Supervisor - Cajero + cancelaciones + reportes del día', 'supervisor'],
                  ['Almacenista - Gestión de inventario y productos', 'almacenista'],
                  ['Contador - Solo lectura de reportes y exportaciones', 'contador'],
                  ['Gerente - Acceso completo excepto gestión de usuarios', 'gerente'],
                  ['Administrador - Acceso total al sistema', 'admin']
                ],
                { selected: @user.role },
                class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
            
            <!-- Descripción del rol seleccionado -->
            <div class="mt-3 p-4 bg-indigo-50 rounded-lg border border-indigo-200">
              <p class="text-sm text-indigo-800">
                <span class="font-semibold">Descripción del rol:</span>
                <span id="role-description">Selecciona un rol para ver sus permisos</span>
              </p>
            </div>
          </div>
        </div>

        <!-- Contraseña -->
        <div class="space-y-6 pt-6 border-t border-gray-200">
          <h3 class="text-lg font-semibold text-gray-800 flex items-center">
            <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
            </svg>
            Contraseña
            <% unless @user.new_record? %>
              <span class="ml-2 text-sm font-normal text-gray-500">(dejar en blanco para no cambiar)</span>
            <% end %>
          </h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Password -->
            <div>
              <%= form.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.password_field :password, 
                  class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition", 
                  placeholder: @user.new_record? ? "Mínimo 6 caracteres" : "••••••",
                  autocomplete: "new-password" %>
              <% if @user.new_record? %>
                <p class="mt-1 text-xs text-gray-500">Si no se proporciona, se generará una contraseña automática</p>
              <% end %>
            </div>

            <!-- Password Confirmation -->
            <div>
              <%= form.label :password_confirmation, "Confirmar contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.password_field :password_confirmation, 
                  class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition", 
                  placeholder: @user.new_record? ? "Repite la contraseña" : "••••••",
                  autocomplete: "new-password" %>
            </div>
          </div>
        </div>

        <!-- Estado -->
        <div class="space-y-6 pt-6 border-t border-gray-200">
          <h3 class="text-lg font-semibold text-gray-800 flex items-center">
            <svg class="w-5 h-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Estado de la Cuenta
          </h3>

          <div class="flex items-center space-x-3">
            <%= form.check_box :active, class: "w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" %>
            <%= form.label :active, "Usuario activo (puede iniciar sesión)", class: "text-sm font-medium text-gray-700" %>
          </div>
        </div>

        <!-- Botones -->
        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
          <%= link_to users_path, class: "px-6 py-3 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition" do %>
            Cancelar
          <% end %>

          <%= form.submit @user.new_record? ? "Crear Usuario" : "Actualizar Usuario", 
              class: "px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-lg hover:from-indigo-700 hover:to-purple-700 transition shadow-md" %>
        </div>

      <% end %>
    </div>

  </div>
</div>

<script>
  // Actualizar descripción del rol cuando se cambia
  document.addEventListener('DOMContentLoaded', function() {
    const roleSelect = document.querySelector('select[name="user[role]"]');
    const roleDescription = document.getElementById('role-description');
    
    const descriptions = {
      'cajero': 'Puede realizar ventas, registrar cobros, buscar productos y clientes. No puede cancelar ventas ni acceder a reportes.',
      'supervisor': 'Tiene todos los permisos de cajero, además puede cancelar ventas, aprobar descuentos mayores y generar reportes del día.',
      'almacenista': 'Gestiona inventario, productos, compras a proveedores, ajustes de inventario y almacenes. No puede acceder a ventas.',
      'contador': 'Acceso de solo lectura a todos los reportes financieros, costos, utilidades y exportaciones. No puede modificar nada.',
      'gerente': 'Control operativo completo del negocio. Puede todo excepto gestionar usuarios del sistema.',
      'admin': 'Acceso total al sistema incluyendo gestión de usuarios, configuración y todas las funcionalidades.'
    };
    
    function updateDescription() {
      const selectedRole = roleSelect.value;
      roleDescription.textContent = descriptions[selectedRole] || 'Selecciona un rol para ver sus permisos';
    }
    
    roleSelect.addEventListener('change', updateDescription);
    updateDescription(); // Actualizar al cargar la página
  });
</script>