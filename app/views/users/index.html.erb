<div class="min-h-screen bg-gradient-to-br from-indigo-50 to-purple-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    
    <!-- Header -->
    <div class="mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <h1 class="text-4xl font-bold text-gray-900">Usuarios del Sistema</h1>
        <p class="mt-2 text-gray-600">Gestiona los usuarios y sus permisos</p>
      </div>
      <%= link_to new_user_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-lg hover:from-indigo-700 hover:to-purple-700 transition shadow-lg" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
        </svg>
        Nuevo Usuario
      <% end %>
    </div>

    <!-- Filtros -->
    <div class="bg-white rounded-xl shadow-md p-6 mb-6">
      <%= form_with url: users_path, method: :get, local: true, class: "flex flex-col sm:flex-row gap-4 items-end" do |f| %>
        
        <div class="flex-1">
          <%= f.label :role, "Rol", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :role, 
            options_for_select([
              ['Todos los roles', ''],
              ['Cajero', 'cajero'],
              ['Supervisor', 'supervisor'],
              ['Almacenista', 'almacenista'],
              ['Contador', 'contador'],
              ['Gerente', 'gerente'],
              ['Administrador', 'admin']
            ], params[:role]), 
            {}, 
            class: "w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
        </div>

        <div class="flex-1">
          <%= f.label :active, "Estado", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :active, 
            options_for_select([
              ['Todos', ''],
              ['Activos', 'true'],
              ['Inactivos', 'false']
            ], params[:active]), 
            {}, 
            class: "w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
        </div>

        <div class="flex gap-2">
          <%= f.submit "Filtrar", class: "px-6 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg hover:from-indigo-700 hover:to-purple-700 transition shadow" %>
          <%= link_to "Limpiar", users_path, class: "px-6 py-2 bg-gray-200 text-gray-700 font-semibold rounded-lg hover:bg-gray-300 transition" %>
        </div>
      <% end %>
    </div>

    <!-- Estadísticas -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500">Total Usuarios</p>
            <p class="text-3xl font-bold text-indigo-600"><%= @users.count %></p>
          </div>
          <div class="w-12 h-12 bg-indigo-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500">Usuarios Activos</p>
            <p class="text-3xl font-bold text-green-600"><%= @users.where(active: true).count %></p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500">Usuarios Inactivos</p>
            <p class="text-3xl font-bold text-red-600"><%= @users.where(active: false).count %></p>
          </div>
          <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500">Administradores</p>
            <p class="text-3xl font-bold text-purple-600"><%= @users.where(role: :admin).count %></p>
          </div>
          <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabla de usuarios -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Nombre</th>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Email</th>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Rol</th>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Estado</th>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Último acceso</th>
              <th class="px-6 py-4 text-left text-sm font-bold uppercase">Acciones</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% if @users.any? %>
              <% @users.each do |user| %>
                <tr class="hover:bg-gray-50 transition">
                  <!-- Nombre con avatar -->
                  <td class="px-6 py-4">
                    <div class="flex items-center space-x-3">
                      <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center text-white font-bold text-sm shadow">
                        <%= user.name.first.upcase %>
                      </div>
                      <div>
                        <p class="font-semibold text-gray-900"><%= user.name %></p>
                        <% if user == current_user %>
                          <span class="text-xs text-blue-600 font-medium">(Tú)</span>
                        <% end %>
                      </div>
                    </div>
                  </td>
                  
                  <!-- Email -->
                  <td class="px-6 py-4 text-gray-700">
                    <%= user.email %>
                  </td>
                  
                  <!-- Rol -->
                  <td class="px-6 py-4">
                    <span class="px-3 py-1 rounded-full text-xs font-semibold <%= role_badge_color(user.role) %>">
                      <%= role_name(user.role) %>
                    </span>
                  </td>
                  
                  <!-- Estado -->
                  <td class="px-6 py-4">
                    <% if user.active? %>
                      <span class="px-3 py-1 bg-green-100 text-green-800 rounded-full text-xs font-semibold">
                        Activo
                      </span>
                    <% else %>
                      <span class="px-3 py-1 bg-red-100 text-red-800 rounded-full text-xs font-semibold">
                        Inactivo
                      </span>
                    <% end %>
                  </td>
                  
                  <!-- Último acceso -->
                  <td class="px-6 py-4 text-sm text-gray-600">
                    <% if user.last_sign_in_at %>
                      <%= time_ago_in_words(user.last_sign_in_at) %> atrás
                    <% else %>
                      <span class="text-gray-400">Nunca</span>
                    <% end %>
                  </td>
                  
                  <!-- Acciones -->
                  <td class="px-6 py-4">
                    <div class="flex items-center space-x-2">
                      <!-- Ver -->
                      <%= link_to user_path(user), class: "p-2 bg-blue-100 text-blue-600 rounded-lg hover:bg-blue-200 transition" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                      <% end %>
                      
                      <!-- Editar -->
                      <%= link_to edit_user_path(user), class: "p-2 bg-yellow-100 text-yellow-600 rounded-lg hover:bg-yellow-200 transition" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                      <% end %>
                      
                      <!-- Activar/Desactivar -->
                      <% unless user == current_user %>
                        <%= button_to toggle_active_user_path(user), method: :patch, class: "p-2 #{user.active? ? 'bg-red-100 text-red-600 hover:bg-red-200' : 'bg-green-100 text-green-600 hover:bg-green-200'} rounded-lg transition", data: { turbo_confirm: "¿Estás seguro?" } do %>
                          <% if user.active? %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                            </svg>
                          <% else %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                          <% end %>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="6" class="px-6 py-16 text-center">
                  <div class="flex flex-col items-center">
                    <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                    </svg>
                    <p class="text-gray-500 text-lg font-medium">No hay usuarios registrados</p>
                    <p class="text-gray-400 text-sm mt-1">Crea el primer usuario del sistema</p>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>